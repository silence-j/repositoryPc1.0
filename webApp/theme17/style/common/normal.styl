.validate-tip
  display none
  // position at bottom of input
  // padding 10px
  // position at right top
  position absolute
  right 0
  top -30px
  height 30px
  line-height 30px
  padding 0 10px
  color $inputErrorBorderColor
.valid-tip
  display none
  // position at bottom of input
  // padding 10px
  // position at right top
  position absolute
  right 0
  top -30px
  height 30px
  line-height 30px
  padding 0 10px
  color $inputSuccessBorderColor
.error
  label
    span
      color $errorColor
  .validate-input
    border-color $inputErrorBorderColor
  .valid-tip
    display none
  .validate-tip
    display block
    min-height 18px
    i[class^="glyphicon"]
      margin-right 6px
.valid
  label
    span
      color $errorColor
  .validate-input
    border-color $inputSuccessBorderColor
  .valid-tip
    display block
  .validate-tip
    display none
    min-height 18px
    i[class^="glyphicon"]
      margin-right 6px

// 提示框
.alert
  position fixed
  z-index 10000
  top 100px
  left 50%
  margin-left -242px
  width 585px
  padding 4px 0 4px 15px
  color $alertColor
  word-break break-all
  border-radius 4px
  i
    margin-right 10px
    font-size 14px
.alert-success
  border 1px solid $successBorderColor
  background-color $successBgColor
  color $successColor
.alert-info
  border 1px solid $infoBorderColor
  background-color $infoBgColor
  color $infoColor
.alert-warning
  border 1px solid $warningBorderColor
  background-color $warningBgColor
  color $warningColor

