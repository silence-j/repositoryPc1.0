    position static
    .top
      background-color $mbHeaderBgColor
      min-height 90px
      text-align center
      .logo-wrapper
        line-height 90px
        height 90px
      .logo-img
        height 45px
    .bottom
      border-top-color $mbNavbarItemLineColor
      background-color $mbnavbarWideBgColor
      .navbar
        background-color $mbnavbarWideBgColor
      .navbar-header
        background-color $mbNavbarBgColor
      .navbar-collapse
        background-color $mbHeaderBgColor
        border-color $mbNavbarItemLineColor
        padding 0
      ul.navbar-nav
        position relative
        background-color $mbHeaderBgColor
        margin 0
        padding 0
        height auto
        // z-index 1001
        & > li
          display block
          line-height 60px
          height auto
          padding 0 15px
          border-bottom 1px solid $mbNavbarItemBorderColor
          text-align left
          margin 0
          & > a
            background-color $mbNavbarItemBgColor
            color $mbNavbarItemColor
            text-decoration none
            height 60px
            line-height 60px
            padding 0
            text-align left
            &:hover, &:active, &:focus
              background $mbNavbarItemHoverBgColor
              color $mbNavbarItemHoverColor
              border-bottom none
            &:before
              content ''
              display inline-block
              width 15px
              height 15px
              background-color $mbNavbarItemIconColor
