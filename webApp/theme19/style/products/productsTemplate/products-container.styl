// 分页
.pagination
  width 100%
  text-align center

.product-container
  padding-top 50px

// menu title
.menu-title
  position relative
  height 51px
  line-height 51px
  width 300px
  padding-left 20px
  margin-bottom 0
  background transparent url(/assets/$theme/images/module_title_full_bg.png) right top no-repeat
  color $productTitleColor
  font-size 26px
  font-weight bold
  text-align left
