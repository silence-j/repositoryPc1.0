.profile-section
  // margin-top 40px
  margin-top 20px
  background $white
  // box-shadow 0 0 6px 4px rgba(0,0,0,0.02)
  font-size 14px
  .title
    margin-top 20px
    // padding 10px
    // background $whiteOO
  .arrow-container
    position relative
    .icon-arrow
      position absolute
      // top 57%
      // width 34px
      // height 34px
      // line-height 34px
      top 64px
      bottom 0
      width 34px
      font-size 20px
      text-align center
      // background-color $tradeCertNavBgNormal
      color $tradeCertNavColor
      cursor pointer
      vertical-align middle
      z-index 3
      &:before
        align-items center
        width 100%
        display flex
        justify-content center
        height 100%
      &:hover, &.active
        // background-color $tradeCertNavBgActive
        // color $white
        color $black
      &.icon-arrow-left
        left 0
      &.icon-arrow-right
        right 0

  #profile-desc
    margin-top 30px
    // border 1px solid $grayO
    margin-bottom 50px
  .content-container
    padding-left 2%
    padding-right 2%
    margin-bottom 30px
    &.about
      // margin-top 50px
      margin-bottom 30px
      // #companydesc
      //   padding 20px
      //   position relative
