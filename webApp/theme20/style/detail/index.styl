//       height 300px

// 匹配手机
.img-responsive, .carousel-inner>.item>img
  width 100%
.share-four-xs
    position absolute
    top 50%
    right 20px
    margin -10px 0 0 -10px
  .glyphicon-share
    font-size 20px
    color $mbShareIconColor
.share-four-toggle
  display none
  position absolute
  right -19px
  top 35px
  width 50px
  text-align center
  background-color $shareTogleBgColor
  border 1px solid $shareTogleBorderColor
  z-index 99
  &:before
    position absolute
    content ''
    border-left 1px solid $shareTogleBorderColor
    width 10px
    height 10px
    transform rotate(45deg)
    border-top 1px solid $shareTogleBorderColor
    background $shareTogleBgColor
    top -5.5px
    margin-left -3px
  a
    display block
    margin 20px 0
    font-size 18px

.footer-container
  margin-top 30px

@media screen and (max-width: 767px)
  .mainpic-container
    margin-top 0
    padding-top 0
  .left-pic
    padding 0
  .right-pic
    h1
      margin-left 0
  .fob-box, .spec-box
    margin-left 0
    & + .btn-group
      margin-left 0
    .form-group
      .ui-select, .select3
        width 55%

