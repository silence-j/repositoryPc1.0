.down-item
    position relative
    height 64px
    line-height 64px
    border-bottom 1px solid #e8e8e8
    p
        margin 0 0 0 5px
        display inline-block
    .btn-blue-trans
        position absolute
        right 0
        top 18px
        padding 0 15px
        height 30px
        line-height 30px
        font-size 13px
.pagination
    float right
