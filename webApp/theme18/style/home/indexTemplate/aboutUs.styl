@media screen and (max-width: 767px)
  .aboutUs-container
    margin-top 0 // 50px
    // padding 25px 0
    // background -webkit-linear-gradient(to bottom, #F7F7F7, #F7F7F7 80%, $white 80%, $white)
    // background linear-gradient(to bottom, #F7F7F7, #F7F7F7 80%, $white 80%, $white)
    // background none
    .title
      color $mbAboutUsSectionTitleColor
    .aboutUs
      padding 0
      .title-wrapper
        text-align center
        // .title
        //   color $mainColor
      .aboutUs-img
        padding-bottom 0
        .title
          font-size 36px
          .title-line
            left 135px
            width 65%
        .ab-img-container
          margin-top 0 // 30px
      .discrible-container
        background none
        padding 0 15px
        min-height auto
        .discrible-cntr
          height auto
          padding-bottom 0
        &:before
          display none
        .discrible
          padding 10px
          margin-top 20px
          .discrible-text
            color $aboutUsSectionColor
          .btn-wrapper
            margin 0
            text-align center
            .btn-default .text
              display inline-block
              margin-left 5px
