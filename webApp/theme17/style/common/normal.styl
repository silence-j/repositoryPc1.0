// display image as cover background
.image-cover
  background-position 50% 50%
  background-repeat no-repeat
  background-size cover
// display children middle vertivcally
.vertical-middle
  display inline-block
  vertical-align middle
  &:before
    content ""
    display inline-block
    vertical-align middle
    height 100%

.btn
  display inline-block
  .glyphicon
    margin-top -5px

