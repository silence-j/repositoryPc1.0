.margin-20
  margin-bottom -20px
.contacts-list
  margin-top -60px
  background $white
  padding 0
  .title
    font-family HelveticaNeueLTPro-Bd,sans-serif
    margin-top 20px
    margin-bottom 30px
    padding 10px 16px
    background $whiteOO
    font-size 24px
    color: #333
    font-weight bold
.info-form
  margin 40px auto
  width calc(100% - 300px)
  .form-group
    padding 25px 0 0 0
    min-height 30px
    border-bottom 1px solid #d8d8d8
  .short
    margin-right 8.33%
.empty-input
    padding: 0 0 0 10px
    width 100%
    height 100%
    min-height 30px
    border 0
    outline none
textarea.empty-input
    display inline-block
    margin-bottom -5px
    padding 0 0 0 10px
    height 100px
    resize none
.req
  color red
.fi-name
  font-weight normal
  padding-left 5px
.send
  margin 10px auto
  padding 13px 79px
  display block
  background-color $whiteOO
  color #ccc
  font-weight bold
  border 2px solid #D9D9D9
  outline none
  position relative
  top 15px
.send.able
  color $white
  background-color $mainColor
  border 2px solid $mainColor


@media screen and (max-width: 768px)
  .contacts-list
    margin-top 10px
    .title
      padding 8px
      font-size 16px
    &.row
      margin-left -5px
      margin-right -5px
    .info-form
      width calc(100% - 60px)
@media screen and (min-width: 1200px)
  .container
    width 1200px !important