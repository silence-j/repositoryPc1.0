.aboutUs-container
  margin-top 0 // 80px
  padding 0 // 150px 0 100px
  position relative
  background-color $forgroundColor

  // about us top title
  .title
    position relative
    background-color transparent
    font-size 30px
    line-height 80px
    font-weight normal
    color $aboutUsSectionTitleColor
    &:before, &:after
      content ''
      position absolute
      display inline-block
      top 85px
      left 50%
      margin-left -15px
      height 1px
      width 32px
      background $productTitleLineColor
      -webkit-transform rotate(45deg)
      -moz-transform rotate(45deg)
      transform rotate(45deg)
    &:after
      -webkit-transform rotate(-45deg)
      -moz-transform rotate(-45deg)
      transform rotate(-45deg)
    span
      margin-right 0.25em
      // color $aboutUsSectionTitleColor
      // font-weight bold
    .title-line
      display none
      z-index -1
      left 210px
      top 36px
      position absolute
      width 135%
      height 100px
      border-top 2px solid $aboutUsSectionTitleLineColor
      border-right 2px solid $aboutUsSectionTitleLineColor
      // background $aboutUsSectionTitleLineColor url(/images/$theme/abount-title_bg.png) top left no-repeat
      // background-size contain
      &:before
        content ""
        display inline-block
        width 0
        height 0
        vertical-align middle
        border-right 7px dashed
        border-right 7px solid \9
        border-top 6px solid transparent
        border-bottom 6px solid transparent
        top -7px
        left -6px
        position absolute
    .title-wrapper &
      text-align center
      line-height normal
      margin-top 40px
      margin-bottom 40px

  .aboutUs
    padding-top 0
    padding-bottom 0
    // .aboutUs-img.col-sm-6
    //   width 55%
    // .discrible-container.col-sm-6
    //   width 45%
    .discrible-container
      // position static
      background $aboutUsSectionDescBgColor
      padding 0 // 90px 0
      // background url(/assets/$theme/images/home_about-us_bg.png) top left no-repeat
      // background-size 104px 477px
      // padding-left 124px
      // min-height 477px
      .discrible-cntr
        width 100%
        height 0
        padding-bottom 100%
        overflow hidden
      &:before
        // display inline-block
        display none
        position absolute
        content ''
        left 0
        top 0
        width 40px
        height 6px
        background-color $aboutUsSectionTitleIconColor
      .title
        // display none // using background title
        color $aboutUsSectionTitleColor
        // text-shadow 1px 1px 5px $black
        text-align center
        font-size 32px
        // &:after
        //   display none // block
        //   content ''
        //   height 3px
        //   width 40px
        //   background-color $mainColor
        //   margin-top 20px
        &:before, &:after
          content ''
          position absolute
          display inline-block
          top 100px
          left 50%
          margin-left -15px
          height 1px
          width 32px
          background $productTitleLineColor
          -webkit-transform rotate(45deg)
          -moz-transform rotate(45deg)
          transform rotate(45deg)
        &:after
          -webkit-transform rotate(-45deg)
          -moz-transform rotate(-45deg)
          transform rotate(-45deg)
      .discrible
        // padding 2.5% 5% 5% 0
        padding 0 60px
        margin-top 55px
        .jump-to
          text-decoration: none
        .discrible-text
          max-height 264px
          line-height 24px
          overflow hidden
          text-overflow ellipsis
          display -webkit-box
          -webkit-box-orient vertical
          -webkit-line-clamp 11
          font-size 16px
          color $aboutUsSectionColor
          p
            height 20px
            border-radius 10px
            margin 0 0 18px
          .half
            width 70%
        .btn-wrapper
          text-align center
        .btn
          margin-top 25px
          background $aboutUsLearnMoreBtnBgColor
          border-color $aboutUsLearnMoreBtnBorderColor
          color $aboutUsLearnMoreBtnColor
    .aboutUs-img
      // float right
      // padding-bottom 30px
      padding 0 // 40px 0
      .ab-img-container
        // margin-top 70px
        // padding-bottom (320/409*100 + '%')
        // position relative
        // overflow hidden
        width 100%
        height 0
        padding-bottom 100%
        text-align right
        overflow hidden
        img
          // position absolute
          // top 0
          // max-height 100%
          width 100%
          height auto
        .img-hold
          position absolute
          top 0
          width 100%
          height 100%
          background $loadingBg

@media screen and (max-width: 1200px)
  .aboutUs-container .aboutUs
    .discrible-container
      .title
        .title-line
          width 125%

@media screen and (max-width: 991px)
  .aboutUs-container .aboutUs
    .discrible-container
      .title
        .title-line
          width 115%
      .discrible
        .discrible-text
          max-height 120px
          -webkit-line-clamp 4
    // .aboutUs-img
    //   .ab-img-container
