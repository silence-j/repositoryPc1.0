.carousel-container
  // padding-bottom 90px
  .banner-loading
    width 100%
    background $loadingBg
    .img-container
      position relative
      padding-bottom 36.45833%
      background url('/images/banner-loading.png') no-repeat
      background-size 50% 100%
      background-position center
  #carousel-banner
    display none
    .carousel-inner
      height 0px
      padding-bottom 36.45833%
      position relative
      .item
        img
          position absolute
          top 0
          width 100%

  .carousel-indicators-container
    &.dots
      // display none
      position absolute
      bottom 13px
      left 0
      right 0
      z-index 20
      // width 100%
      text-align center
      .carousel-indicators
        position static
        width 100%
        // height 3px
        // line-height 3px
        left auto
        padding 0
        margin 0
      li
        text-indent 0
        // border-radius 0
        // border none
        // width 25%
        // height 3px
        width 12px
        height 12px
        margin 0 5px
        // border-radius 0
        // border none
        // background-color $carouselDotIndicatorBgColor
        // color $carouselDotIndicatorColor
        &.active
          background-color $carouselDotIndicatorActiveBgColor
          color $carouselDotIndicatorActiveColor
    &.thumbs
      display none
      background -webkit-linear-gradient(to right, $mainColor, $mainColor 50%, $carouselThunmbIndicatorBgColor 50%, $carouselThunmbIndicatorBgColor)
      background linear-gradient(to right, $mainColor, $mainColor 50%, $carouselThunmbIndicatorBgColor 50%, $carouselThunmbIndicatorBgColor)
      height 90px
      bottom -90px
      ol.carousel-indicators
        position relative
        background $carouselThunmbIndicatorBgColor
        margin 0
        padding 15px 0
        height 91px
        -webkit-clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
        clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
        -webkit-clip-path url("#home-carousel-thumb-clip-path")
        clip-path url("#home-carousel-thumb-clip-path")
        html.safari &
          -webkit-clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
          clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
        &:after
          content ''
          position absolute
          right 32px
          top 15px
          bottom 15px
          display inline-block
          clear none
          width 20px
          background-color $mainColor
          transform skew(-45deg)
      li
        height 60px
        width 180px
        transform skew(-45deg)
        transform-origin center center
        border-radius 0
        overflow hidden
        display none
        .img-bg
          width 200%
          height 200%
          transform skew(45deg)
          background-position 50% 50%
          background-repeat no-repeat
          background-size cover
        &:nth-child(1)
          display inline-block
        &:nth-child(2)
          display inline-block
        &:nth-child(3)
          display inline-block

