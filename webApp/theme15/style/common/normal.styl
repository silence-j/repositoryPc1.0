.validate-tip
  display none
  // position at bottom of input
  // padding 10px
  // position at right top
  position absolute
  right 0
  top -30px
  height 30px
  line-height 30px
  padding 0 10px
  color $errorColor
.valid-tip
  display none
  // position at bottom of input
  // padding 10px
  // position at right top
  position absolute
  right 0
  top -30px
  height 30px
  line-height 30px
  padding 0 10px
  color $successColor
.error
  label
    span
      color $errorColor
  .validate-input
    border-color $inputErrorBorderColor
  .valid-tip
    display none
  .validate-tip
    display block
    min-height 18px
    border-color $inputErrorBorderColor
    background-color $inputErrorBorderBgColor
    color $errorColor
    i[class^="glyphicon"]
      margin-right 6px
.valid
  label
    span
      color $errorColor
  .validate-input
    border-color $inputSuccessBorderColor
  .valid-tip
    display block
  .validate-tip
    display none
    min-height 18px
    i[class^="glyphicon"]
      margin-right 6px

