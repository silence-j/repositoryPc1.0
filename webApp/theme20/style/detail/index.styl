@import "../common/color.styl"
@import "../common/header.styl"
@import "../common/footer.styl"
@import "../../../common/style/normal.styl"
@import "../common/normal.styl"
@import "./indexTemplate/desc.styl"

body
  background $forgroundColor

.header
  background $headerNoOpacicyBgColor
  .top
    background $headerNoOpacicyBgColor

label
  font-weight normal
a:hover, a:focus
  text-decoration none

// loading
.detail-loading
  .right-pic h1
    background-color $loadingBg
    height 70px
  .price
    margin-top 10px
    margin-left -15px
    width 50%
    height 32px
    background-color $loadingBg
  .line
    margin-top 15px
    margin-left -15px
    width 100%
    border-bottom 1px solid $detailLineColor
  .img-list
    margin-left -15px
    margin-top 15px
    &>a
      background-color $loadingBg
  .load-spec
    margin 35px 0
    p
      height 20px
      background-color $loadingBg
  .load2
    margin 0
    margin-left -15px
    width 100%
    float left
  .share-four
    a
      height 24px
      width 24px
      background-color $loadingBg
    a:before
      content ""
  // .supplier-form, .spec-box, .num-box, .fob-box, .btn-group, .download-list, .carousel-control
  //     display none

.mainpic-container
  margin-top 120px // 20px
  padding-top 0 // 50px
  padding-bottom 20px
  background-color $forgroundColor
.left-pic
  padding 20px
  .carousel
    height 0
    padding-bottom 100%
    background-color $loadingBg
  // .carousel
  //     height 550px
  .carousel-inner, .item
    width 100%
    height auto
    max-height 460px
@media (max-width: 767px)
  .left-pic
    .carousel-inner, .item
      max-height 768px

.img-box .item img
  // width 100%
  // padding-bottom 100%
.carousel-control
  opacity 1
  text-shadow none
.carousel-control.right, .carousel-control.left
  // display inline-block
  height 40px
  width 40px // adjust width of carousel-control
  top 50%
  margin-top -20px
  background-image none
  background-color $mainPicCarouselCtrlBgColor
  border 1px solid $mainPicCarouselCtrlBorderColor
  color $mainPicCarouselCtrlColor
  z-index 399
  .glyphicon
    position static
    margin 9px auto
    width 25px // adjust width of carousel-control
    height 22px
    font-size 16px
.carousel-control:hover
  background-color $mainPicCarouselCtrlHoverBgColor
  border-color $mainPicCarouselCtrlHoverBorderColor
  color $mainPicCarouselCtrlHoverColor

// magnify-show

.magnify-switch, .magnify-begin, .magnify-show
  // display none
  position absolute
  top 19px
  background-color $mainPicMagnifyShowBgColor
.magnify-switch
  display none
  top auto
  bottom 0
  right 0
  width 30px
  height 30px
  line-height 30px
  background-color $mainPicMagnifySwitchBgColor
  color $mainPicMagnifySwitchColor
  text-align center
  &:hover
    background-color $mainPicMagnifySwitchHoverBgColor
.magnify-begin
  left 0
  width 150px
  height 150px
  opacity 0.5
  cursor move
.magnify-show
  left 100%
  top 20px
  width 445px
  height 445px
  border 1px solid #CCC
  overflow hidden
  z-index 10000
.magnify-show > img
  margin-left 0
  margin-top 0
  // width 1320px
  // height 1320px
@media screen and (max-width: 767px)
  // .carousel-control
  //    display none
  .magnify-begin, .magnify-show
     display none !important

// img-list

.img-list
  position relative
  margin 0 0 5px -10px
  .spec-box &, .fob-box &, .num-box &
    // line before image list
    margin-top 10px
    &:before
      content ''
      border-bottom 1px solid $detailLineColor
      position absolute
      width 100%
      top -15px
      left 0
    // line after image list
    // margin-bottom 20px
    // &:after
    //   content ''
    //   border-bottom 1px solid $detailLineColor
    //   position absolute
    //   width 100%
    //   bottom -15px
    //   left 0
.img-list > a
  margin-right 10px
  width 50px
  height 50px
  display inline-block
  border $detailThumbBorderWidth solid $detailThumbBorderColor
  img
    width 100%
    height 100%
    border 1px solid $detailThumbBorderColor
.img-list > a.select, .img-list > a:hover
  border $detailThumbBorderWidth solid $detailThumbHoverBorderColor
  img
    border 1px solid $detailThumbHoverBorderColor

// socail-links

.share-four
  margin 10px 0
  text-align center
  label
    margin-right 20px
    color $detailLabelColor
    margin-bottom 2px
  a
    margin-right 20px
    display inline-block
    font-size 16px
    vertical-align bottom

.social-links
  .glyphicon
    background-color $shareLinkIconBgColor
    color $shareLinkIconColor !important
    margin-right 10px
    font-size 12px
    padding 5px
    &.glyphicon-facebook // :hover
      background-color $facebookColor
    &.glyphicon-twitter // :hover
      background-color $twitterColor
    &.glyphicon-linkedIn // :hover
      background-color $linkedInColor
    &.glyphicon-pinterest // :hover
      background-color $pinterestColor
.glyphicon-facebook
  color $facebookColor
.glyphicon-twitter
  color $twitterColor
.glyphicon-linkedIn
  color $linkedInColor
.glyphicon-pinterest
  color $pinterestColor

.right-pic
  h1
    position relative
    margin: 25px 0 10px -15px
    color $detailTitleColor
    word-break break-all
    word-wrap break-word
    span
      padding-left 0
      font-size 2.4rem
      // font-weight normal

.form-group
  margin-bottom 25px
  color $detailItemColor
  &:before
    content ""
    display inline-block
    vertical-align middle
    height 100%
  label
    width 90px
    color $detailLabelColor
    vertical-align middle
    margin-bottom 0
  .ui-select, .select3
    width 45%

.calu-wrap
  position relative
  width 25%
  display inline-block
  a
    position absolute
    top 9px
    width 20px
    height 20px
    color $selectCaretColor
  .glyphicon-reduce
    left 7px
  .glyphicon-plus
    right 5px
  input
    padding-right 20%
    padding-left 20%
    width 100%
    text-align center

.btn-group
  width 100%
  padding-top 20px
  overflow hidden
  button
    vertical-align middle
  .btn-blue
    display inline-block
    margin-right 15px
    height 50px
    line-height 50px
    width 50%
    font-size 1.6rem
    color: #fff
    // font-weight bold
  .btn-black-trans
    width 30%
    min-width 105px
    font-weight normal
  .spec-box + &, .fob-box + &
    margin-left -15px
  .num-box + &
    margin-left -10px

// desc box
.spec-box, .fob-box, .num-box, .img-list
  // float left
  width 100%
.spec-box, .fob-box, .num-box
  padding-bottom 10px
  border-bottom 1px solid $detailLineColor

.fob-box
  .num-detail
    background-color $detailNumBgColor
.text-group
  padding-left 10px
  color $detailItemColor
  p
    display inline-block
    margin 0
    line-height 35px
    font-weight bold
    b
      margin-right 5px
  label
    width 20%
    color $detailLabelColor

// sku 报价

.spec-box, .fob-box
  margin-top 0 // 10px
  // border-top 2px solid $border
  h3
    display inline-block
    color $detailPriceColor
    font-size 1.8rem

// spec-box 1

.spec-box
  margin-left -15px
  span
    color $detailTextColor
  .tit-unit
    color $detailTitleUnitColor
    margin 0 5px
  // .form-group
  //   label
  //     float left
  //     clear both
  //     margin-bottom 4px
  //     margin-top 8px
  //   .select3, .ui-select, ui-input, .calu-wrap
  //     float left
  //     clear both

// 数量报价 num-box 0

.num-box
  margin-left -10px
  // border-top 2px solid $detailLineColor
.price-tab
  // margin-top -14px
  margin-top 0
  ul
    padding-left 10px
    // background-color $priceTabBgColor
    border-top 1px solid $detailLineColor
    border-bottom 1px solid $detailLineColor
  li
    float left
    width 20%
    p:first-child
      margin-top 10px
    p:last-child
      margin-bottom 10px
  p
    margin 5px 0
    color $detailLabelColor
    font-size 1.4rem
  .price
    color $mainColor
    font-size 1.8rem
    font-weight bold
  .tit
      p
      color $detailLabelColor

// fob报价 fob-box 2

.fob-box
  margin-left -15px
  span
    color $detailTextColor
  & > span
    color $detailTitleUnitColor
  .tit-unit
    color $detailTitleUnitColor
    margin 0 5px
// @media screen and (max-width: 767px)
