.aboutUs-container
  margin-top 80px
  padding-left 0
  position relative
  background -webkit-linear-gradient(to bottom, #F7F7F7, #F7F7F7 45%, $white 45%, $white)
  background linear-gradient(to bottom, #F7F7F7, #F7F7F7 45%, $white 45%, $white)

  .title
    position relative
    background-color transparent
    font-size 50px
    line-height 80px
    font-weight normal
    color $blackTrue
    span
      // color $mainColor
      // font-weight bold
      margin-right 0.25em
    .title-line
      display none
      z-index -1
      left 210px
      top 36px
      position absolute
      width 135%
      height 100px
      border-top 2px solid #009800
      border-right 2px solid #009800
      // background $white url(/images/$theme/abount-title_bg.png) top left no-repeat
      // background-size contain
      &:before
        content ""
        display inline-block
        width 0
        height 0
        vertical-align middle
        border-right 7px dashed
        border-right 7px solid \9
        border-top 6px solid transparent
        border-bottom 6px solid transparent
        top -7px
        left -6px
        position absolute
  .title-wrapper .title
    text-align center
    line-height normal
    margin-top 40px
    margin-bottom 40px

  .aboutUs
    padding 0 20%
    .discrible-container
      float left
      padding 0
      position relative
      &:before
        // display inline-block
        display none
        position absolute
        content ''
        left 0
        top 0
        width 40px
        height 6px
        background-color $blackTrue
      .discrible
        background-color transparent
        // padding 2.5% 5% 5% 0
        padding 0
        margin-top 30px
        .jump-to
          text-decoration: none
        .discrible-text
          max-height 168px
          overflow hidden
          text-overflow ellipsis
          display -webkit-box
          -webkit-box-orient vertical
          -webkit-line-clamp 7
          line-height 24px
          color $blackO
          p
            height 20px
            background #E8E8E8
            border-radius 10px
            margin 0 0 18px
          .half
            width 70%
        .btn-wrapper
          text-align center
        .btn
          margin-top 25px
    .aboutUs-img
      // float right
      // padding-bottom 30px
      padding 0
      .ab-img-container
        // margin-top 70px
        width 100%
        // padding-bottom (320/409*100 + '%')
        // position relative
        // overflow hidden
        img
          // position absolute
          // top 0
          width 100%
          height auto
          // max-height 100%
        .img-hold
          position absolute
          top 0
          width 100%
          height 100%
          background #F2F2F2

@media screen and (max-width: 1200px)
  .aboutUs-container .aboutUs
    .discrible-container
      .title
        .title-line
          width 125%

@media screen and (max-width: 991px)
  .aboutUs-container .aboutUs
    .discrible-container
      .title
        .title-line
          width 115%
      .discrible
        .discrible-text
          max-height 120px
          -webkit-line-clamp 4
