  margin-bottom 0
  // border 1px solid $itemBorderColor
  // overflow hidden
  .p-item
    position relative
    background-color $itemBgColor
    padding 0
    border 1px solid $itemBorderColor
    // &.over-copy
    //   position absolute
    //   top 15px
