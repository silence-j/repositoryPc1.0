.carousel-container
  // padding-bottom 90px
  .banner-loading
    width 100%
    background $loadingBg
    .img-container
      position relative
      padding-bottom 39.0625%
      height 0px
      background url('/images/banner-loading.png') no-repeat
      background-size 50% 100%
      background-position center
  #carousel-banner
    display none
    .carousel-inner
      //padding-bottom 38.07292%
      position relative
      .item
        padding-bottom 39.0625%
        height 0px
        a
         display inline-block
         img
           position absolute
           top 0
           width 100%
           height 100%
  .carousel-indicators
    left auto
    width 100%
    right 0
    bottom 20px
    text-align center
    margin 0
    li
      text-indent 0
      border-radius 0
      border none
      width 16px
      height 16px
      // line-height 12px
      border-radius 50%
      background-color $white
      border 4px solid #C6BEB6
      color $black
      margin 0 5px
      &.active
        background-color $mainColor
        color #F1EEEA
    &.thumbs
      display none
      background -webkit-linear-gradient(to right, $mainColor, $mainColor 50%, #F7F7F7 50%, #F7F7F7)
      background linear-gradient(to right, $mainColor, $mainColor 50%, #F7F7F7 50%, #F7F7F7)
      height 90px
      bottom -90px
      ol
        position relative
        background #F7F7F7
        margin 0
        padding 15px 0
        height 91px
        -webkit-clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
        clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
        -webkit-clip-path url("#carousel-thumbs-ol-clip-shape-12")
        clip-path url("#carousel-thumbs-ol-clip-shape-12")
        html.safari &
          -webkit-clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
          clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
        &:after
          content ''
          position absolute
          right 32px
          top 15px
          bottom 15px
          display inline-block
          clear none
          width 20px
          background-color $mainColor
          transform skew(-45deg)
      li
        height 60px
        width 180px
        transform skew(-45deg)
        transform-origin center center
        border-radius 0
        overflow hidden
        display none
        .img-bg
          width 200%
          height 200%
          transform skew(45deg)
          background-position 50% 50%
          background-repeat no-repeat
          background-size cover
        &:nth-child(1)
          display inline-block
        &:nth-child(2)
          display inline-block
        &:nth-child(3)
          display inline-block

  .carousel-dir-controls
    display none
    height 100%
    .carousel-control
      background none

@media screen and (max-width: 767px)
  .banner-loading .img-container
    //padding-bottom 76.92308%
  .carousel-container
      padding-bottom 40px
      #carousel-banner .carousel-inner .item
        padding-bottom 39.0625%
      .carousel-indicators
        display block
        text-align center // right
        padding-right 0 // 40px
      .carousel-dir-controls
        display none

@media screen and (max-width: 480px)
  .carousel-container
      .carousel-indicators
        &.thumbs
          ol
            -webkit-clip-path: polygon(13% 0,100% 0,100% 100%,0% 100%)
            clip-path: polygon(13% 0,100% 0,100% 100%,0% 100%)
            -webkit-clip-path url("#carousel-thumbs-ol-clip-shape-13")
            clip-path url("#carousel-thumbs-ol-clip-shape-13")
            html.safari &
              -webkit-clip-path: polygon(13% 0,100% 0,100% 100%,0% 100%)
              clip-path: polygon(13% 0,100% 0,100% 100%,0% 100%)
            &:after
              right 20px
          li
            width 22%

@media screen and (max-width: 320px)
  .carousel-container
      .carousel-indicators
        &.thumbs
          ol
            -webkit-clip-path: polygon(20% 0,100% 0,100% 100%,0% 100%)
            clip-path: polygon(20% 0,100% 0,100% 100%,0% 100%)
            -webkit-clip-path url("#carousel-thumbs-ol-clip-shape-20")
            clip-path url("#carousel-thumbs-ol-clip-shape-20")
            html.safari &
              -webkit-clip-path: polygon(20% 0,100% 0,100% 100%,0% 100%)
              clip-path: polygon(20% 0,100% 0,100% 100%,0% 100%)
            &:after
              right 16px
              width 16px
          li
            width 18%
        .container
          & > div
            padding 0 5px
