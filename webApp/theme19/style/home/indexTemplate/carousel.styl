.carousel-container
  // padding-bottom 90px
  .banner-loading
    width 100%
    background $loadingBg
    .img-container
      position relative
      height 0px
      padding-bottom 36.46%
      background url('/images/banner-loading.png') no-repeat
      background-size 50% 100%
      background-position center
  #carousel-banner
    display none
    .carousel-inner
      //padding-bottom 36.45833%
      position relative
      .item
        height 0px
        padding-bottom 36.45833%
        a
          display inline-block
         img
           position absolute
           top 0
           width 100%
           height 100%
  .carousel-indicators-container
    &.dots
      // display none
      position absolute
      z-index 201
      bottom 15px
      // left 50%
      // right 0
      width 100% // 20px
      // margin-left -8px
      text-align center
      .carousel-indicators
        position static
        // width 100%
        // height 3px
        // line-height 3px
        height 16px
        line-height 16px
        width auto
        padding 0
        margin 0
      li
        text-indent 0
        border-radius 0
        border none
        width 45px
        height 4px
        margin 10px 2px 10px 0
        // border-radius 2px
        background $carouselDotIndicatorBgColor
        border 1px solid $carouselDotIndicatorBorderColor
        color $carouselDotIndicatorColor
        -webkit-clip-path polygon(10% 0, 100% 0%, 90% 100%, 0% 100%)
        clip-path polygon(10% 0, 100% 0%, 90% 100%, 0% 100%)
        -webkit-clip-path url("#home-carousel-dot-clip-path")
        clip-path url("#home-carousel-dot-clip-path")
        html.safari &
          -webkit-clip-path polygon(10% 0, 100% 0%, 90% 100%, 0% 100%)
          clip-path polygon(10% 0, 100% 0%, 90% 100%, 0% 100%)
        &:last-child
          margin-right 0
        &.active
          background-color $carouselDotIndicatorActiveBgColor
          border-color $carouselDotIndicatorActiveBorderColor
          color $carouselDotIndicatorActiveColor
    &.thumbs
      display none
      background -webkit-linear-gradient(to right, $mainColor, $mainColor 50%, $carouselThunmbIndicatorBgColor 50%, $carouselThunmbIndicatorBgColor)
      background linear-gradient(to right, $mainColor, $mainColor 50%, $carouselThunmbIndicatorBgColor 50%, $carouselThunmbIndicatorBgColor)
      height 90px
      bottom -90px
      ol.carousel-indicators
        position relative
        background $carouselThunmbIndicatorBgColor
        margin 0
        padding 15px 0
        height 91px
        -webkit-clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
        clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
        -webkit-clip-path url("#home-carousel-thumb-clip-path")
        clip-path url("#home-carousel-thumb-clip-path")
        html.safari &
          -webkit-clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
          clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
        &:after
          content ''
          position absolute
          right 32px
          top 15px
          bottom 15px
          display inline-block
          clear none
          width 20px
          background-color $mainColor
          transform skew(-45deg)
      li
        height 60px
        width 180px
        transform skew(-45deg)
        transform-origin center center
        border-radius 0
        overflow hidden
        display none
        .img-bg
          width 200%
          height 200%
          transform skew(45deg)
          background-position 50% 50%
          background-repeat no-repeat
          background-size cover
        &:nth-child(1)
          display inline-block
        &:nth-child(2)
          display inline-block
        &:nth-child(3)
          display inline-block

