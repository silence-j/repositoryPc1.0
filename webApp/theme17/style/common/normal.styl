.ui-select, .ui-input
  padding 6px 12px
  width 100%
  height 40px
  -webkit-appearance none
  background-image url("data:image/png;base64,")
  background-repeat no-repeat
  background-position 98% center
  border-radius $selectBorderRadius
  border 0
  background-color $selectBgColor
  color $selectColor
  border 1px solid $selectBorderColor
.ui-select:hover
  border-color $mainColor
  background-image url("data:image/png;base64,")
.ui-input
  background-image none

.select3-hidden
  display none
  visibility hidden
  padding-right 10px
.select3
  cursor pointer
  display inline-block
  position relative
  width 50%
  height 40px
  vertical-align middle
  font-size 16px
  color $selectItemColor
.select3-styled
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  background-color $selectBgColor
  color $selectColor
  padding 8px 35px 8px 15px
  transition all 0.2s ease-in
  border 1px solid $selectBorderColor
  border-radius $selectBorderRadius
  text-align center
  span
    .form-group &
      color $selectColor
  .chevron-down, .chevron-up
    position absolute
    top 10px
    right 10px
    display inline-block
    color $selectCaretColor
    font-size 13px
  .chevron-up
    display none
  &:after
    display none
    content ""
    width 0
    height 0
    border 7px solid transparent
    border-color $selectItemColor transparent transparent transparent
    position absolute
    top 16px
    right 10px
  &:hover
    background-color $selectBgColor
    border-color $selectHoverBorderColor
  &:active, &.active
    background-color $selectBgColor
    .chevron-down
      display none
    .chevron-up
      display inline-block
    &:after
      display none
      top 9px
      border-color transparent transparent $selectItemColor transparent
.select3-options
  display none
  position absolute
  top 100%
  right 0
  left 0
  z-index 999
  margin 0
  padding 0
  list-style none
  background-color $selectBgColor
  box-shadow 0 0 6px 0 rgba(0, 0, 0, 0.20)
  border 1px solid $selectOptionsBorderColor
  li
    margin 0
    padding 12px 0
    text-indent 15px
    // border-top 1px solid $selectBgColor
    transition all 0.15s ease-in
    background-color $selectItemBgColor
    color $selectItemColor
    &:hover
      background-color $selectItemHoverBgColor
      color $selectItemHoverColor
    &[rel="hide"]
      display none
    &.selected
      background-color $selectItemSelectedBgColor
      color $selectItemSelectedColor

.modal
  text-align: center;
  &:before
    display inline-block
    vertical-align middle
    content " "
    height 100%
.modal-dialog
  display inline-block
  text-align left
  vertical-align middle

