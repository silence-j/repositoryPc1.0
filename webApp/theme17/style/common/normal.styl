  padding 0 10px
  font-size 15px
  // line-height 36px
  // background-color $mainColor
  // border 2px solid $mainColor
  line-height 40px
  background $mainColor url(/assets/$theme/images/btn_bg.png) top left repeat-y
  border none
  color $forgroundColor
  border-radius $btnBorderRadius
  .glyphicon
