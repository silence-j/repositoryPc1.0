.footer-container
  #footer-container
    .container
      .row
        .support.col-sm-6.col-xs-12
          p.title.col-xs-12 Support
          p.contact.context
            span.col-xs-12
              i.glyphicon.glyphicon-tel.sup-i
              span.tel
            span.col-xs-12
              i.glyphicon.glyphicon-email.sup-i
              span.email
            span.col-xs-12
              i.theme-icon.icon-institue.sup-i
              span.location
        .quick-links.col-sm-3.col-xs-12
          p.title.col-xs-12 Quick Link
          p.links.context
            if(plat != '1')
              span.col-xs-12
                a(href='/?shopId=#{shopId}') Home
            span.col-xs-12
              a(href='/products?shopId=#{shopId}') Products
            if(fb !== '1' && (blogCount) > 0)
              if(pageCode === 'blog')
                span.col-xs-12
                  a(href='/blog/#{shopId}') Blog
              else
                span.col-xs-12
                  a(href='/blog/#{shopId}') Blog
            if(plat != '1')
              span.col-xs-12
                a(href='/profile?shopId=#{shopId}') Company Profile
              span.col-xs-12
                a(href='/contacts?shopId=#{shopId}') Contact Us
        .follow-us.col-sm-3.col-xs-12
          p.title.col-xs-12#footer Follow Us
          .socail.context.icon-num.col-xs-12
            //- 通过JS动态添加
            //- i.glyphicon.glyphicon-facebook
            //- i.glyphicon.glyphicon-linkedIn
            //- i.glyphicon.glyphicon-twitter
    nav.navbar.bottom.navbar-inverse.footer-copyright
      .container.discribe
