.carousel-container
  .banner-loading
    width 100%
    background $loadingBg
    .img-container
      position relative
      padding-bottom 30.98958%
      background url('/images/banner-loading.png') no-repeat
      background-size 50% 100%
      background-position center
  #carousel-banner
    display none
    .carousel-inner
      //padding-bottom 30.98958%
      position relative
      .item
        padding-bottom 31.25%
        height 0px
        a
         display inline-block
         img
           position absolute
           top 0
           width 100%
           height 100%
  .carousel-indicators
    display block
    left auto
    width 100%
    right 0
    bottom 20px
    text-align center
    margin 0
    li
      text-indent 0
      border-radius 0
      border none
      width 12px
      height 12px
      // line-height 12px
      border-radius 50%
      background-color rgba(255, 255, 255, 0.8)
      color $black
      margin 0 5px
      &.active
        background-color rgba(0, 0, 0, 0.8)
        color $forgroundColor
  .carousel-dir-controls
    height 100%
    .carousel-control
      background none
      .glyphicon-chevron-left
        margin-left -25px
      .glyphicon-chevron-right
        margin-right -25px

@media screen and (max-width: 767px)
  .banner-loading .img-container
        //padding-bottom 73.33333%
  .carousel-container
      #carousel-banner .carousel-inner .item
        padding-bottom 31.25%
        height 0px
      .carousel-indicators
        display none
      .carousel-dir-controls
        display none
