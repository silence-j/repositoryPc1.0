@import "color.styl"
@import "homeEditor.styl"

.navbar
  min-height 40px
  margin-bottom 0
.header
  background $headerBgColor
  .sup-i
    display inline-block
    border-radius 50%
    background #E9FAFB
    color $mainColor
    height 50px
    width 50px
    margin-right 10px
  .top
    position relative
    padding-bottom 16px
    .logo-img-loading
      height 57px
      width 200px
      background $loadingBg
      margin-top 12px
      display inline-block
    .logo-wrapper
      position relative
      display block
      height 124px
      line-height 124px
      text-align center
      .header-left, .header-right
        position absolute
        left 0
        top 0
        height 100%
        line-height normal
        padding-left 60px
        color $black
        vertical-align middle
        max-width 26.5%
        text-align left
        word-break break-all
        &:before
          content ""
          display inline-block
          vertical-align middle
          height 100%
        .sup-i
          display inline-block
          line-height 50px
          font-size 24px
          text-align center
          position absolute
          left 0
          top 37px
        span
          display inline-block
          vertical-align middle
          text-align left
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
          max-width 120px
      .header-right
        left auto
        right 0
    .logo-img
      display none
      height 57px
      width auto
    .social-container
      font-size 16px
      & > div
        margin-top 40px
      .top-user
        margin-left 15px
        .user-opration, .user-loged
          display none
        .glyphicon
          font-size 28px
          margin-right 10px
        .btn
          height 40px
          line-height 36px
          font-size 24px
          padding 0 15px
      .top-search
        position relative
        z-index 9
        animation-duration 0.2s
        .input-group
          border 2px $mbTopSearchBorderColor solid
          .search-icon
            position absolute
            left 7.5px
            top 7px
            color $mbTopSearchBtnColor
            z-index 10
          input
            border-color $mbTopSearchBorderColor
            padding-left 30px
            box-shadow none
            border none
            width 240px
            height 36px
            line-height 36px
          .search-btn
            z-index 99
            height 36px
            font-size 16px
            border none
            outline none
            background-color $mbTopSearchBtnBgColor
            color $mbTopSearchBtnColor
            margin-right -1px
  .bottom
    z-index 499
    background #24cedd
    .navbar
      background $navbarBgColor
      border none
      border-radius 6px
      position relative
    .navbar-header
      background-color $navbarBgColor
      .mbSearch-wrapper
        display none
        background-color $white
        position absolute
        z-index 699
        top -2px
        left 0
        right 0
        height 100%
        padding 30px 15px 0
        margin-right 45px
        animation-duration 0.2s
        .search-tip-list
          position absolute
          z-index 999
          left 0
          top 40px
          width 100%
          margin 0
          padding 5px 10px
          background-color $pcTopSearchTipListBgColor
          box-shadow 0 0 6px 0 $pcTopSearchTipListShadowColor
          display none
          li
            height 32px
            line-height 32px
            min-height auto
            cursor pointer
            overflow hidden
            text-overflow ellipsis
            &.empty
              cursor default
      .search-input
        height 38px
        border-top 1px solid transparent
        border-bottom 1px solid $mbTopSearchBorderColor
        background $mbTopSearchBgColor
        input
          background $mbTopSearchInputBgColor
          color $mbTopSearchInputColor
          border none
          border-radius 0
          height 40px
          box-shadow none
          &:active, &:focus
            box-shadow none
        span
          border none
          background $mbTopSearchLabelBgColor
      button
        display none
        padding: 6px 10px
        font-weight bold
        border none
        background $mbTopSearchBtnBgColor
        color $blackTrue
        width 40px
        height 40px
        margin 0
        .menu-close
          display none
        .menu-bar
          font-size 14px
          vertical-align bottom
          display inline-block
        .menu-text
          vertical-align text-bottom
        &.search-menu, &.info-menu
          color $mbTopSearchBtnColor
      button:focus, button:hover
        border none
        background none
        outline none
        box-shadow none
      .search-btn
        display none
      .info-menu-list
        display none
        position absolute
        right 0
        top 90px
        background-color $white
        width 60%
        margin 0
        padding 10px 15px
        box-shadow 0 9px 12px 0 rgba(0, 0, 0, 0.08)
        z-index 999
        li
          display block
          float left
          position relative
          padding-left 65px
          &:before
            content ""
            display inline-block
            vertical-align middle
            height 100%
          .sup-i
            position absolute
            left 0
            top 7.5px
            font-size 24px
            line-height 50px
            text-align center
          span
            line-height 20px
            display inline-block
            vertical-align middle
    ul > li
      line-height 65px
      & > a
        background $navbarItemBgColor
        color $navbarItemColor
        font-size 16px
        line-height 65px
        // height 65px
        padding 0 25px
        .caret
          margin-left 2.5px
        &:hover, &:focus
          cursor pointer
          text-decoration none
          background $navbarItemHoverBgColor
          color $navbarItemHoverColor
      &.home
        a
          background-color #2CC1D0
          .theme-icon
            font-size 24px
      &.search-li, &.user-li
        & > a
          &:hover, &:focus
            background $navbarItemBgColor
            i
              opacity 0.45
    ul.navbar-nav
      position relative
      li.drop-menu, li.nav-drop-menu
        position relative
        .slide-down, .slide-up
          vertical-align middle
          display inline-block
          margin-top -3px
          margin-left 2px
          font-size 12px
        .slide-up
          display none
        .drop-hidden-menu
          position absolute
          z-index 99
          top 65px
          width 210px
          padding 0 0 5px
          background $navbarSubBgColor
          height 0
          opacity 0
          overflow hidden
          margin-top 0
          transition opacity 0.2s ease
          box-shadow 1px 1px 5px $grayOOO
          border-radius 0 0 6px 6px
          li
            border-bottom 1px solid transparent
            height 40px
            line-height 40px
            a
              height 40px
              line-height normal
              font-weight normal
              background-color $navbarSubItemBgColor
              color $navbarSubItemColor
              width 100%
              display inline-block
              padding 10px 20px 10px 20px
              text-overflow ellipsis
              overflow hidden
              white-space nowrap
              position relative
              i
                position absolute
                right 5px
                top 12.5px
                font-size 13px
                float right
            .drop-hidden-menu-2-wrapper
              display none
              position absolute
              z-index 999
              width 0
              height 0
              opacity 0
              overflow hidden
              background transparent
              transition opacity 0.2s ease
              width 210px
              margin -55px 0 0 210px
              border-radius 6px
              padding 3px 5px
            .drop-hidden-menu-2
              background-color $navbarSub2BgColor
              padding 0
              box-shadow 1px 1px 5px $grayOOO
              border-radius 6px
              li:first-child a
                border-radius 6px 6px 0 0
              li:last-child a
                border-radius 0 0 6px 6px
              li:only-child a
                border-radius 6px
            a:hover
              color $mainColor
              text-decoration none
          li.drop-menu-2:hover
            & > a
              color $navbarSubItemHoverColor
            .drop-hidden-menu-2-wrapper
              display block
              height auto
              opacity 1
            .drop-hidden-menu-2
              padding 0
        &.drop-right
          .drop-hidden-menu
            left auto
            display block
            height 0
            opacity 0
            top 65px
            left 0
            width 120px
            margin-left -30px
            padding 0 0 10px 0
            box-shadow 0 9px 12px 0 rgba(0, 0, 0, 0.08)
            border-radius 0 0 4px 4px
            a
              display inline-block
              padding 0 20px
              line-height 40px
              height 40px
              text-align center
              &.signout
                background-color #F8F8F8
              i
                width 16px
                height 16px
            a:hover, a:focus
              background-color #F8F8F8
      li.drop-menu:hover, li.nav-drop-menu:hover
        .slide-down
          display none
        .slide-up
          display inline-block
        .drop-hidden-menu
          height auto
          opacity 1
          overflow visible
      li:last-child
        margin-right 0
      li.active
        border-bottom none
        a
          font-weight bold
          background-color $navbarItemHoverBgColor
          color $navbarItemHoverColor
        a:hover, a:focus
          background-color $navbarItemHoverBgColor
          color $navbarItemHoverColor
      .line-li
        height 50px
        margin 0
        padding-top 0
        .line
          display inline-block
          height 50px
          width 1px
          background $blackOOO0
      .search-li, .user-li
        a
          padding 0 20px
      .user-opration, .user-loged
        color $blackO
        display none
        line-height 60px
        a
          color $blackO
        span
          margin 0 7px
        i
          margin-right 6px
        .username
          width: 40px
          display inline-block
          white-space nowrap
          overflow hidden
          text-overflow: ellipsis
          line-height 10px
          padding 0
  .hidden-search
    position absolute
    z-index 599
    left 0
    right 0
    top 0
    margin-left 0
    margin-right 90px
    height 65px
    padding 12.5px 15px
    background-color $pcTopSearchBgColor
    display none
    animation-duration 0.2s
    border-radius 6px 0 0 6px
    .input-group
      position relative
      label
        position absolute
        z-index 699
        left 15px
        top 10px
        background none
        border none
        font-size 14px
        font-weight normal
        color $white
        transition .2s all ease-in-out
      .form-control
        background-color $pcTopSearchInputBgColor
        border 1px solid $pcTopSearchBorderColor
        border-radius 0
        padding 0 12px
        height 40px
        line-height 38px
        box-shadow none
        color $pcTopSearchInputColor
        &::placeholder
          color $pcTopSearchInputColor
        &:active, &:focus
          outline none
          box-shadow none
          & + label
            top -5px
            font-size 12px
        &.inputed
          & + label
            top -5px
            font-size 12px
      .btn
        background none
        border none
        height 40px
        color $pcTopSearchBtnColor
        padding 0 20px
        &:focus
          outline none
          color $white
        &.search-btn
          padding-left 40px
    .search-tip-list
      position absolute
      z-index 999
      top 52px
      left 0
      right 0
      margin 0 -15px
      padding 5px 10px
      padding 5px 10px
      background-color $pcTopSearchTipListBgColor
      box-shadow 0 0 6px 0 $pcTopSearchTipListShadowColor
      display none
      li
        height 32px
        line-height 32px
        cursor pointer
        overflow hidden
        text-overflow ellipsis
        &.empty
          cursor default
  &.header-fixed
    .bottom
      background-color $mainColor
      margin-left 0
      margin-right 0
      transition 0.2s all ease-in-out
    & + div
      margin-top 0

@media screen and (max-width: 1200px)
  .header
    .top
      .logo-img
        max-width 300px
    .bottom
      ul > li
        a
          padding 0 20px
    .hidden-search
      .search-tip-list
        width 781px

@media screen and (max-width: 999px)
  .header
    .top
      .logo-img
        max-width 140px
        height auto
    .bottom
      ul > li
        a
          padding 0 10px
    .hidden-search
      .search-tip-list
        width 560px
  .logo-wrapper
    .hidden-xs
      display none !important
    .visible-xs 
      display block !important
/*old767px*/
@media screen and (max-width: 999px)
  .header
    &.header-fixed
      position relative
    .top
      min-height 90px
      height auto
      line-height 0
      padding 0
      .logo-wrapper
        line-height 90px
        height 90px
        position absolute
        left 0
        right 0
        text-align center
      .logo-img
        height 45px
        width auto
        margin-top 0
    .bottom
      position static
      margin -90px 0 0 0
      background-color transparent
      .navbar
        background-color transparent
      .navbar-header
        background-color transparent
        padding 22.5px 20px
        height 90px
        .mbSearch-wrapper
          padding-top 22.5px
          height 90px
        button
          display inline-block
          background-color transparent
          .menu-text
            display none
      .navbar-collapse
        background-color $headerBgColor
        padding 0
      ul.navbar-nav
        background-color $headerBgColor
        margin 0
        padding 0
        li
          border-bottom 1px solid $whiteO
          padding 0 15px
          height auto
          & > a
            background-color transparent
            color $blackTrue
            text-decoration none
            line-height 65px
            text-align left
            &:hover, &:active, &:focus
              background-color transparent
              color $blackTrue
            .caret
              position absolute
              right 20px
              top 50%
              margin-top -5px
        li.drop-menu, li.drop-menu:hover
          .drop-hidden-menu
            background $white
            opacity 1
            height auto
            position static
            border-top none
            width 100%
            box-shadow none
            li
              border none
            li.drop-menu-2, li.drop-menu-2:hover
              background $white
              border none
              font-weight bold
              height auto
              a
                background-color transparent
                color $blackTrue
                padding 15px 0 5px
                border-radius 0 !important
              &>a
                font-weight bold
                font-size 15px
              .drop-hidden-menu-2
                margin-top 0
                height auto
                opacity 1
                background $white
                margin-left 0
                position relative
                border-top none
                width 100%
                height auto
                overflow visible
                box-shadow none
                li
                  height 40px
                  margin-bottom 15px
                  padding-left 10px
                  padding-right 10px
                a
                  line-height 40px
                  background $loadingBg
                  padding 2px 5px
                  text-align center
                  margin-bottom 7px
                  border-radius 0 !important
                  &:hover, &:focus
                    background-color $mainColor
                    color $white
        li.active
          border-bottom 1px solid $whiteO
          a, a:hover, a:active, a:focus
            font-weight normal
            background-color transparent
            color $blackTrue
        li.user-li
          background $loadingBg
          width 100%
          text-align left
          .user-opration, .user-loged
            margin-left 10px
            line-height 40px
            a
              background-color transparent
              padding 0
              font-weight normal
              color $blackO
              &.username
                width auto
                display inline
                line-height normal
        li
          .social-container
            color $grayO
            margin-top 0
            a
              display inline-block
              text-align center
              color $grayO
              &:hover, &:active, &:focus
                text-decoration none
                color $mainColor
            i
              font-size 18px
