.desc-container
    padding-bottom 50px
    background-color $white
.split-line
  margin-bottom -2px
  border-top 1px solid $border
.desc-tit
    margin 10px 0
    padding 13px 15px
    color $black
    font-size 2.4rem
    font-weight bold
    background-color $whiteOO
.desc-attr
  margin-bottom 20px
  border-bottom 1px solid #E6E6E6
  ul
    margin 30px 10px 20px 30px
    padding 0
  li 
    // float left
    margin-bottom 10px
    // width 33.33%
    font-size 13px
    label
      display inline-block
      margin-right 5px
      min-width 80px
      color #999
    span
      color #333
.desc-img
    p
      margin 0
    img
      display block
      max-width 100%
      height auto
.supplier-form
    margin 20px auto
    width 80%
    .form-group
        padding 25px 0 0 0
        min-height 30px
        border-bottom 1px solid #D8D8D8
    .short
        margin-right 8.33%
    // .short div
    //       padding-bottom 0
.empty-input
    padding: 0 0 0 10px
    width 100%
    height 100%
    min-height 30px
    border 0
    outline none
textarea.empty-input
    display inline-block
    margin-bottom -5px
    padding 0 0 0 10px
    height 100px
    resize none
