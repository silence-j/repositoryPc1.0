      &:before
        top -7px
        left -16px
      &:after
        bottom -7px
        right -16px
  .item-container
    // border 1px solid #EBF0F6
    padding 10px
    transition 0.2 margin-top ease
    &.tit
      border-color $white
      padding 0 10px
  .img-container
    padding-bottom 100%
    position relative
    overflow hidden
    img
      position absolute
      top 0
      transition all 0.6s
      width 100%
    img:hover
      // transform scale(1.2)
      transform scale(1)
  .p-title
    height 40px
    line-height 20px
    font-size 14px
    margin-top 10px
    overflow hidden
    text-overflow ellipsis
    display -webkit-box
    -webkit-box-orient vertical
    -webkit-line-clamp 2
    color $black
  &:hover
    .p-item
      // border-bottom-color $white
      padding-bottom 30px // hover roll up style
      .item-container
        margin-top -15px  // hover roll up style
      .img-container
        box-shadow 1px 1px 10px $blackO
      .hover-container
        display block

// products hover 样式
.item-container
  display block
  text-decoration none
  &:hover, &:active, &:focus
    text-decoration none
    .learn-more
      display block
.img-container:hover
  img
    // transform scale(1.2)
    transform scale(1)
  .hover-container
    // display block
    display none
  // .learn-more
  //   display inline-block
.hover-container
  display none
  width 100%
  height 100%
  background $grayOO
  position absolute
  opacity 0.5

// 无产品就加载
.boxImg
  height 485px
  text-align center
  img
    margin-top 30px

@media (min-width: 768px) and (max-width: 991px)
  .p-list
    padding 5px
