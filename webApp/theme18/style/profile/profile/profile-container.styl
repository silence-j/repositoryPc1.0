@media screen and (max-width: 767px)
  .profile-section
    font-size 18px
    .container-fluid
      padding 0
    #profile-desc
      border none
      margin-top 20px
    .content-container
      padding-left 0 // 15px
      padding-right 0 // 15px
      &.about
        #companydesc
          max-width 100%
          width 100%
          margin-right 0
        .comDesc
          // padding 30px 0 0 0
          // padding 0
          // &:before
          //   left 0
          //   top 15px
          p
            font-size 18px
      &.company
        li
          span
            &:last-child
              p
                text-align left
          &:nth-child(3), &:nth-child(4), &:nth-child(7), &:nth-child(8), &:nth-child(11), &:nth-child(12)
            background-color $tableBgColor
            border-right-color $tableBorderColor
            span:first-child
              border-right-color $tableBorderColor
      &.trademark
        padding-left 0
        padding-right 0
  .mask-container
    .modal-dialog
      width 80%
