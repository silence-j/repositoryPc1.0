.cd-top
  display inline-block
  position fixed
  z-index 899
  bottom 40px
  right 15px
  height 40px
  width 40px
  line-height 36px
  text-decoration none
  overflow visible
  white-space nowrap
  text-align center
  font-size 20px
  cursor pointer
  border 2px solid $cdTopBgColor
  background-color $cdTopBorderColor
  color $cdTopColor
  border-radius 4px
  box-shadow 0 2px 8px 0 $cdTopBoxShadowColor
  -webkit-transition opacity .3s 0s, visibility 0s .3s
  -moz-transition opacity .3s 0s, visibility 0s .3s
  transition opacity .3s 0s, visibility 0s .3s
  visibility hidden
  opacity 0
  &:hover
    text-decoration none
    background-color $cdTopHoverBgColor
    border-color $cdTopHoverBorderColor
    color $cdTopHoverColor
    .theme-icon
      color $cdTopHoverColor
  &.cd-is-visible,
  &.cd-fade-out
    -webkit-transition opacity .3s 0s, visibility 0s 0s
    -moz-transition opacity .3s 0s, visibility 0s 0s
    transition opacity .3s 0s, visibility 0s 0s
  &.cd-is-visible
    visibility visible
    opacity 1
  &.cd-fade-out
    opacity .5
  .theme-icon
    width 36px
    line-height 36px
    font-size 20px
    color $forgroundColor
  p
    display none
    margin 0
    color $mainColor
    font-size 12px
    text-align center
    margin-left -12px

