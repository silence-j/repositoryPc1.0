// 分页
.pagination
  width 100%
  text-align center

// 模块标题
.menu-title
  position relative
  font-weight bold
  font-size 24px
  margin-top 50px
  margin-bottom 0
  // &::first-letter
  //   color $mainColor
  .caret
    display none
    color $mainColor
    margin-left 10px
  .line
    position absolute
    background-color $mainColor
    height 2px
    width 100px
    bottom -10px
    left 0
  .product-menu &
    display none

// 列表
.product-list
  // margin-top -45px
  padding-top 50px
  padding-left 0
  background $white
  .products-container-list
    margin-left -15px
    margin-right -15px
  .loading-search-title
    width 30%
    height 20px
    margin-bottom 10px
    background $loadingBg
  .title
    margin-top 10px
    margin-bottom 20px
    padding 10px
    background $whiteOO
    font-size 18px
  .product-desc
    display none
    color $blackO
    .num
      color $mainColor
      margin-left 5px
      margin-right 5px
  .load-more-products
    display none
    text-align center
    padding-top 15px
    .load-more
      display inline-block
      height 36px
      line-height 36px
      text-decoration none
      color $blackOO
      border 1px solid $blackOOO
      padding 0 15px
      cursor pointer
      &:hover, &:active, &:focus
        text-decoration none
      &[disabled]
        background-color $grayOO
      .theme-icon
        margin-left 5px

// 产品列表
@import "../../common/productList.styl"

#accordion
  border-right 4px solid #E6E6E6
.product-menu
  padding 50px 0 0 15px
  & + div.col-sm-9
    padding-left 50px
  .panel-group
    .panel
      a
        padding-left 0
        // &:before
        //   display inline-block
        //   content ""
        //   height 6px
        //   width 6px
        //   background-color #6C6C6C
        //   margin-right 10px
        //   vertical-align middle
      &.all .panel-heading a
        border-bottom none
        padding-left 0
        color $categoryAllColor
        &:before
          display none
      .panel-collapse
        .panel-body ul
          padding-left 0
          margin-top 5px
          margin-bottom 5px
        a
          display block
          height 31px
          line-height 31px
          text-decoration none
          color $categorySubColor
          font-weight normal
          padding-left 20px
          // border-top 1px solid $grayO
          margin-right -4px
          width 100%
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
          &:hover, &.active
            // color $blackTrue
            // background-color #FDFAF3
            color $mainColor
            border-right 4px solid $mainColor
        // li:last-child a
        //     border-bottom 1px solid $grayO
      .panel-heading
        .panel-title
          &.reverse
            a
              color #24cedd
      .panel-heading
        .panel-title
          position relative
        a
          width 100%
          height 48px
          line-height 48px
          font-size 14px
          display inline-block
          color $categoryColor
          font-weight bold
          text-decoration none
          padding-right 20px
          text-overflow ellipsis
          overflow hidden
          // border-bottom 1px solid $grayOO
          // i
          //   float right
          //   margin-top 19px
          //   border-top 6px dashed
          //   border-left 6px solid transparent
          //   border-right 6px solid transparent
          .opt-icon
            // display none
            font-weight normal
            float right
            color #E6E6E6
            &.minus
              display none
            &.plus
              display inline-block
          &[aria-expanded="true"]
            // color $mainColor
            border-bottom-color $white
            .opt-icon
              &.minus
                display inline-block
              &.plus
                display none
          &.collapsed
            color $black
            .opt-icon
              &.minus
                display none
              &.plus
                display inline-block
          &[data-toggle]
            position absolute
            top 0
            right 5px
            width auto
            border none
            padding-right 0
            &:before
              display none

.product-menu-loading
  .big-div, .min-div
    width 100%
    background $loadingBg
    height 10px
    margin-bottom 10px
  .min-div
    width 90%
    margin-left 10%

@media screen and (max-width: 767px)
  .product-menu
    & + div.col-sm-9
      padding-left 15px
  .product-list
    // margin-top -30px
    .title
      padding 8px
      font-size 16px
  .product-list.row
    margin-left -5px
    margin-right -5px
