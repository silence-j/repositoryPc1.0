.footer-container
  margin-top 80px
  background $footerBgColor
  #footer-container
    border-top 1px solid $footerBorderColor
  .support, .quick-links, .follow-us
    color $white
    margin-top 80px
    text-align center
    // .title
    //   color $white
    //   font-size 16px
    .context
      .sup-i
        color $forgroundColor
        margin-right 10px
      i
        margin-right 15px
      a,a:active
        color $gray
        text-decoration none
      a:hover
        color $white
      &.contact
        color $footerColor
        .contact-item
          position relative
          height 70px
          padding-left 80px
          text-align left
          &:before
            content ""
            display inline-block
            vertical-align middle
            height 100%
          .sup-i
            position absolute
            left 0
            top 0
            height 70px
            width 70px
            line-height 70px
            margin-right 10px
            background-color #4BCDD8
            border-radius 35px
            display inline-block
            font-size 30px
            color $white
            text-align center
          p
            margin 0
            display inline-block
            vertical-align middle
            &.tel
              margin-top 20px
              &:before
                position absolute
                top 15px
                left 80px
                content 'Call us:'
            &.email
              margin-top 20px
              &:before
                position absolute
                top 15px
                left 80px
                content 'Email:'
      &.socail
        .glyphicon
          color $white
          height 25px
          width 25px
          border-radius 12.5px
          padding 5px
          text-align center
          &.glyphicon-facebook
            background-color transparent
          &.glyphicon-linkedIn
            background-color transparent
          &.glyphicon-twitter
            background-color transparent
      &.links
        text-align center
        .col-xs-12
          width auto
          float none
          border-right 1px solid $white
          &:last-child
            border-right-width 0
  .follow-us
    // margin-top 50px
    margin-top 0
    font-size 14px
    line-height 60px
    text-align left
  .quick-links
    // margin-top 25px
    margin-top 0
  .footer-copyright
    position relative
    border none
    border-radius 0
    margin-top 80px
    background-color $mainColor
    color $white
    // .context
    //   a, a:active
    //     color $white
    //     text-decoration none
    // .copyright-line
    //   margin-top 15px
    //   height 1px
    //   border-top 1px solid #6C6C6C
    //   width 75%
    //   margin-left auto
    //   margin-right auto
  .discribe
    text-align center
    font-size 14px
    line-height 60px
    p
      margin 0
      font-size 12px

@media (min-width: 768px) and (max-width: 991px)
  .footer-container
    .support
      .context
        &.contact
          & > .col-sm-offset-1.col-sm-10
            width 100%
            margin-left 0
@media screen and (max-width: 767px)
  .footer-container
    .support, .quick-links, .follow-us
      .context
        &.contact
          text-align left
          .contact-item
            margin-bottom 50px
    .follow-us
      margin-top 0
    .footer-copyright
      margin-top 0
