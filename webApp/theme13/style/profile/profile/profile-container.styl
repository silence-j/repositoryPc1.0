.ms-browser
  #companydesc
    &:after
      display none

#companydesc
  padding 80px 0 0 0
  position relative
  float none
  &:after
    content ''
    position absolute
    display block
    left 0
    right 0
    top 0
    bottom -1px
    background-color $mainColor
    -webkit-clip-path polygon(8% 0, 29% 95%, 100% 95%, 100% 100%, 0 100%, 0 0)
    clip-path polygon(8% 0, 29% 95%, 100% 95%, 100% 100%, 0 100%, 0 0)
    -webkit-clip-path url("#company-desc-clip-path")
    clip-path url("#company-desc-clip-path")
    html.safari &
      -webkit-clip-path polygon(8% 0, 29% 95%, 100% 95%, 100% 100%, 0 100%, 0 0)
      clip-path polygon(8% 0, 29% 95%, 100% 95%, 100% 100%, 0 100%, 0 0)
  .img-wrapper
    width 100%
    height 0
    padding-bottom 22%
    overflow hidden
    img
      width 100%
      height auto

.profile-section
  // margin-top 40px
  margin-top 2px
  background $white
  // box-shadow 0 0 6px 4px rgba(0,0,0,0.02)
  font-size 14px
  .title
    margin-top 20px
    // padding 10px
    // background $whiteOO
  .arrow-container
    position relative
    .icon-arrow
      position absolute
      // top 57%
      // width 34px
      // height 34px
      // line-height 34px
      top 6px // 64px
      bottom auto // 0
      width 28px
      height 28px
      font-size 13px
      text-align center
      background $tradeCertNavBgNormal
      border 1px solid $tradeCertNavBorderNormal
      border-radius 14px
      color $tradeCertNavColor
      cursor pointer
      vertical-align middle
      &:before
        align-items center
        width 100%
        display flex
        justify-content center
        height 100%
      &:hover, &.active
        background $tradeCertNavBgActive
        border-color $tradeCertNavBorderActive
        color $tradeCertNavActiveColor
      &.icon-arrow-left
        left auto // 0
        right 50px
      &.icon-arrow-right
        right 0

  #profile-desc
    margin-top 80px
    // border 1px solid $grayO
    margin-bottom 50px
  .content-container
    // padding-left 4%
    // padding-right 4%
    margin-bottom 50px
    &.about
      // margin-top 50px
      margin-bottom 30px
      // #companydesc
      //   padding 20px
      //   position relative
      //   .img-wrapper
      //     // position absolute
      //     // top -60%
      //     // left 0
      //     // width 95%
      //     // height 0
      //     // padding-bottom 100%
      //     width 100%
      //     overflow hidden
      //     img
      //       width 100%
      //       height auto
      .comDesc
        position relative
        line-height 20px
        // padding 50px 35px 0 75px
        color $blackO
        font-size 13px
        line-height 24px
        p
          margin 0
          font-size 14px
          &:first-line
            font-style italic
            font-weight bold
            color $mainColor
            font-size 40px
            line-height 50px
        // &:before
        //   position absolute
        //   content ''
        //   display inline-block
        //   left 15px
        //   top 35px
        //   width 40px
        //   height 40px
        //   background url(/assets/theme12/images/quote.png) left top no-repeat
        //   background-size contain
        // & + .hidden-xs
        //   padding-left 75px
        //   .title
        //     .line
        //       display inline-block
        //       position static
        //       width 40px
        //       height 4px
        //       vertical-align text-top
        //       margin-top 11px
        //       margin-left 20px
    &.company
      margin-top 15px
      padding-left 0
      padding-right 0
      ul
        padding-left 0
      li
        margin-top 15px
        span
          &:first-child
            color $blackOO
          &:last-child
            color $blackO
            p
              overflow hidden;
              text-overflow ellipsis;
              white-space nowrap;
              margin:0 0;
    &.trademark
      margin-top 30px
      // padding-left 4%
      // padding-right 4%
      .license
        .desc
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
        .img-container
          padding-bottom 130%
          position relative
          overflow hidden
          border 1px solid $grayOO
          background-position 50% 50%
          background-repeat no-repeat
          background-size cover
          img
            display none
            position absolute
            top 0
            // width 90%
            width auto
            height 100%
            margin-left 5%
    &.download
      padding-left 2.5%
      padding-right 2.5%
      ul
        padding-left 0
        .down-item
          position relative
          height 63px
          border-bottom 1px solid $grayOO
          i
            float left
            line-height 63px
          a.titl
            color $blackO
            text-decoration none
            display inline-block
            margin 20px 0 0 5px
            padding 0
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            width 45%
          .btn-blue-trans
            position absolute
            right 0
            top 15px
            padding 0 15px
            height 30px
            line-height 26px
            font-size 13px
            text-decoration none
            background transparent
            color $secondaryColor
            &:focus, &:hover
              background $mainColor
              color $white
      .load-more-download
        display none
        text-align center
        padding-top 10px
        .load-more
          display inline-block
          height 36px
          line-height 36px
          text-decoration none
          color $blackOO
          border 1px solid $blackOOO
          padding 0 15px
          cursor pointer
          &:hover, &:active, &:focus
            text-decoration none
          &[disabled]
            background-color $grayOO
          .theme-icon
            margin-left 5px
.mask-container
  display none
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  background rgba(110,110,110,.7)
  z-index 999
  .modal-dialog
    width 60%
    .modal-body
      width 100%
      .img-preview
        position relative
        // position fixed
        // top 25%
        // left 25%
        .icon-arrow
          position absolute
          top 45%
          font-size 24px
          color $blackOOO
          cursor pointer
          &.glyphicon-chevron-left
            left 2%
          &.glyphicon-chevron-right
            right 2%
        .img-section
          // padding-bottom 10%
          img
            width 100%
      .close.close-mask
        position absolute
        top -30px
        right 15px
        color $white
        opacity 1
        font-size 30px

@media screen and (max-width: 991px)
  .profile-section
    .content-container
      padding-left 5%
      padding-right 5%

@media screen and (max-width: 767px)
  #companydesc
    padding-top 30px
    &:after
      -webkit-clip-path polygon(5% 0, 29% 95%, 100% 95%, 100% 100%, 0 100%, 0 0)
      clip-path polygon(5% 0, 29% 95%, 100% 95%, 100% 100%, 0 100%, 0 0)
      -webkit-clip-path url("#company-desc-clip-path-768")
      clip-path url("#company-desc-clip-path-768")
      html.safari &
        -webkit-clip-path polygon(5% 0, 29% 95%, 100% 95%, 100% 100%, 0 100%, 0 0)
        clip-path polygon(5% 0, 29% 95%, 100% 95%, 100% 100%, 0 100%, 0 0)
    .img-wrapper
      padding-bottom 22%

  .profile-section
    font-size 18px
    .container-fluid
      padding 0
    #profile-desc
      border none
      margin-top 60px
    .content-container
      padding-left 15px
      padding-right 15px
      &.about
        #companydesc
          padding 0
          .img-wrapper
            position relative
            width 100%
            height auto
            padding-bottom 0
        .comDesc
          // padding 30px 0 0 0
          padding 0
          &:before
            left 0
            top 15px
          p
            font-size 18px
      &.company
        li
          span
            &:last-child
              p
                text-align left
  .mask-container
    .modal-dialog
      width 80%
@media screen and (-ms-high-contrast: active), (-ms-high-contrast: none)
  #companydesc
    &:after
      display none