@media screen and (max-width: 767px)
  .aboutUs-container
    margin-top 50px
    .aboutUs
      padding 0
      .aboutUs-img
        padding-bottom 0
        .title
          font-size 36px
          .title-line
            left 135px
            width 65%
        .ab-img-container
          margin-top 30px
      .discrible-container
        padding 0 15px
        &:before
          display none
        .discrible
          padding 10px 10px 0 0
          .btn-wrapper
            // text-align center
            margin 0
