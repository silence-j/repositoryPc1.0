.pagination>li
  display inline-block
  margin 0 5px
.pagination>li>a, .pagination>li>span
  padding 0
  width 28px
  height 28px
  line-height 28px
  text-align center
  color $paginationColor
  border-color $paginationBorderColor
  background-color $paginationBgColor
  border-radius $paginationRadius
.pagination>li:first-child>a, .pagination>li:first-child>span,
.pagination>li:last-child>a, .pagination>li:last-child>span
  border-radius $paginationRadius
  span
    font-size 14px
.pagination>li>a:hover, .pagination>li>span:hover, .pagination>li>a:focus, .pagination>li>span:focus
  background-color $paginationHoverBgColor
  border 1px solid $paginationHoverBorderColor
  color $paginationHoverColor
  cursor pointer
.pagination>.active>a, .pagination>.active>span
  background-color $paginationActiveBgColor
  border-color $paginationActiveBorderColor
  color $paginationActiveColor
  &:hover, &:focus
    background $paginationActiveHoverBgColor
    border 1px solid $paginationActiveHoverBorderColor
    color $paginationActiveHoverColor
.pagination>.disabled>span, .pagination>.disabled>span:hover, .pagination>.disabled>span:focus,
.pagination>.disabled>a, .pagination>.disabled>a:hover, .pagination>.disabled>a:focus
  background $paginationDisabledBgColor
  border 1px solid $paginationDisabledBorderColor
  color $paginationDisabledColor

