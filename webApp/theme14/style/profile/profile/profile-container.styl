      //     width 100%
      //     overflow hidden
      //     img
      //       width 100%
      //       height auto
      #companydesc
        max-width 40%
        float left
        margin-right 10px
        margin-bottom 10px
        img
          max-width 100%
      .comDesc
        position relative
        line-height 20px
        // padding 50px 35px 0 75px
        color $blackO
        font-size 13px
        line-height 24px
        p
          margin 0
          font-size 14px
          // &:first-line
          //   font-style italic
          //   font-weight bold
          //   color $mainColor
          //   font-size 40px
          //   line-height 50px
        // &:before
        //   position absolute
        //   content ''
        //   display inline-block
        //   left 15px
        //   top 35px
        //   width 40px
        //   height 40px
        //   background url(/assets/theme12/images/quote.png) left top no-repeat
        //   background-size contain
        // & + .hidden-xs
        //   padding-left 75px
        //   .title
        //     .line
        //       display inline-block
        //       position static
        //       width 40px
        //       height 4px
        //       vertical-align text-top
        //       margin-top 11px
        //       margin-left 20px
    &.company
      margin-top 15px
      // padding-left 0
      // padding-right 0
      ul
        padding-left 0
      li
        margin-top 15px
        span
          &:first-child
            color $blackOO
          &:last-child
            color $blackO
            p
              overflow hidden;
              text-overflow ellipsis;
              white-space nowrap;
              margin:0 0;
    &.trademark
      margin-top 30px
      padding-left 4%
      padding-right 4%
      .license
        .img-container
          padding-bottom 130%
          position relative
          overflow hidden
          border 1px solid $grayOO
          background-position 50% 50%
          background-repeat no-repeat
          background-size cover
          img
            display none
            position absolute
            top 0
            // width 90%
            width auto
            height 100%
            margin-left 5%
        .desc
          text-align center
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
    &.download
      ul
        padding-left 0
        .down-item
          position relative
          height 63px
          border-bottom 1px solid $grayOO
          i
            float left
            line-height 63px
          a.titl
            color $blackO
            text-decoration none
            display inline-block
            margin 20px 0 0 5px
            padding 0
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            width 45%
          .btn-blue-trans
            position absolute
            right 0
            top 15px
            padding 0 15px
            height 30px
            line-height 26px
            font-size 13px
            text-decoration none
      .load-more-download
        display none
        text-align center
        padding-top 10px
        .load-more
          display inline-block
          height 36px
          line-height 36px
          text-decoration none
          color $blackOO
          border 1px solid $blackOOO
          padding 0 15px
          cursor pointer
          &:hover, &:active, &:focus
            text-decoration none
          &[disabled]
            background-color $grayOO
          .theme-icon
            margin-left 5px
.mask-container
  display none
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  background rgba(110,110,110,.7)
  z-index 999
  .modal-dialog
    width 60%
    .modal-body
      width 100%
      .img-preview
        position relative
        // position fixed
        // top 25%
        // left 25%
        .icon-arrow
          position absolute
          top 45%
          font-size 24px
          color $blackOOO
          cursor pointer
          &.glyphicon-chevron-left
            left 2%
          &.glyphicon-chevron-right
            right 2%
        .img-section
          // padding-bottom 10%
          img
            width 100%
      .close.close-mask
        position absolute
        top -30px
        right 15px
        color $white
        opacity 1
        font-size 30px

@media screen and (max-width: 991px)
  .profile-section
    .content-container
      padding-left 5%
      padding-right 5%

@media screen and (max-width: 767px)
  .profile-section
    font-size 18px
    .container-fluid
      padding 0
    #profile-desc
      border none
      margin-top 20px
    .content-container
      padding-left 15px
      padding-right 15px
      &.about
        #companydesc
          max-width 100%
          width 100%
          margin-right 0
        .comDesc
          // padding 30px 0 0 0
          padding 0
          // &:before
          //   left 0
          //   top 15px
          p
            font-size 18px
      &.company
        li
          span
            &:last-child
              p
                text-align left
  .mask-container
    .modal-dialog
      width 80%
