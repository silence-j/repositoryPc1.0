.footer-container
  margin-top 40px
  background $footerBgColor
  #footer-container
    border-top 3px solid $footerBorderColor


  .support, .quick-links, .follow-us
    margin-top 30px
    text-align center
    .title
      color $white
      font-size 30px
    .context
      color $footerColor
      p
        margin 0
      i
        margin-right 15px
      a, a:active
        color #7F7F7F
        text-decoration none
      a:hover, a:focus
        color $white
        .glyphicon
          color $white
      .sup-i
        color $white
        margin-right 10px
      // &.footer-logo
      //   text-align center
      //   .logo-img
      //     height 73.60px
      //     width auto
      &.links
        text-align center
        padding-top 30px
        .nav-link
          float none
          width auto
          // border-right 1px solid $white
          &:last-child
            border-right-width 0
      &.contact
        .contact-item
          display block
          position relative
          // &:last-child
          //   width 273px
          //   margin-right 0
          // &:before
          //   content ""
          //   display inline-block
          //   vertical-align text-top
          //   height 100%
          .sup-i
            display none
            position absolute
            left 0
            top 3px
            height 15px
            width 15px
            line-height 15px
            margin-right 5px
            font-size 14px
            color $mainColor
            text-align center
          p
            margin 0
            display inline-block
            // vertical-align text-top
            line-height 26px
            &.tel
              line-height 50px
              font-size 30px
              color $mainColor
      &.social
        margin 0
        line-height 30px
        .glyphicon
          color $grayO
          height 25px
          width 25px
          border-radius 12.5px
          padding 5px
          text-align center
          &.glyphicon-facebook
            background-color transparent
          &.glyphicon-linkedIn
            background-color transparent
          &.glyphicon-twitter
            background-color transparent

  .quick-links
    // margin-top 25px
    margin-top 0
  .support
    margin-top 0
  .follow-us
    margin-top 0
    padding-top 20px
    line-height 30px
    font-size 14px
    color $grayO
    text-align center
    .title
      display none

  .context-line
    text-align center
    margin-top 15px
    &:before
      content ''
      display inline-block
      width 30px
      height 3px
      background-color $mainColor

  .footer-copyright
    position relative
    margin-top 30px
    background-color #1a1a1a
    border none
    //border-top 1px solid $footerBorderColor
    color $blackOO
    border-radius 0
  .discribe
    text-align center
    font-size 14px
    line-height 40px
@media screen and (max-width: 767px)
  .footer-container
    .support, .quick-links, .follow-us
      text-align center
      .context
        &.footer-logo
          text-align left
    .follow-us
      margin-top 0
      margin-bottom 15px
      color $black
      font-size 20px
      .context.social .glyphicon
        color $mainColor
    .footer-copyright
      margin-top 0
      .contact
        text-align left
        .contact-item
          display block
          margin-bottom 10px
          &:last-child
            width 90%
      .discribe
        line-height 30px
        padding 0
        text-align center
