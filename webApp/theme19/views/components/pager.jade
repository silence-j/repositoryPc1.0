ul.pagination.hidden-xs
  li
    a.prev
      //- i.glyphicon.glyphicon-prev
      i.glyphicon.glyphicon-chevron-left
  - for (var i=1; i<= pages; i++)
    if(i === currentPage)
      li.active(class="jump#{i}")
        a #{i}
    else
      li(class="jump#{i}")
        a #{i}
  li
    a.next
      // i.glyphicon.glyphicon-next
      i.glyphicon.glyphicon-chevron-right
