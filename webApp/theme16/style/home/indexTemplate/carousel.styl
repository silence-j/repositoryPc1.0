.carousel-container
  // padding-bottom 90px
  .banner-loading
    width 100%
    background $loadingBg
    .img-container
      position relative
      padding-bottom 36.45833%
      background url('/images/banner-loading.png') no-repeat
      background-size 50% 100%
      background-position center
  #carousel-banner
    display none
    .carousel-inner
      //padding-bottom 36.45833%
      position relative
      .item
        height 0
        padding-bottom 36.46%
        a
          display inline-block
         img
           position absolute
           top 0
           width 100%
           height 100%
  .carousel-indicators-container
    &.dots
      position absolute
      bottom 3px
      left 0
      right 0
      width 100%
      text-align center
      z-index 90
      .carousel-indicators
        position static
        width 100%
        height 3px
        line-height 3px
        left auto
        padding 0
        margin 0
      li
        text-indent 0
        border-radius 0
        border none
        width 25%
        height 3px
        margin 0 // 0 5px
        border-radius 0
        border none
        background-color $carouselDotIndicatorBgColor
        color $carouselDotIndicatorColor
        &.active
          background-color $carouselDotIndicatorActiveBgColor
          color $carouselDotIndicatorActiveColor
    &.thumbs
      display none
      background -webkit-linear-gradient(to right, $mainColor, $mainColor 50%, $carouselThunmbIndicatorBgColor 50%, $carouselThunmbIndicatorBgColor)
      background linear-gradient(to right, $mainColor, $mainColor 50%, $carouselThunmbIndicatorBgColor 50%, $carouselThunmbIndicatorBgColor)
      height 90px
      bottom -90px
      ol.carousel-indicators
        position relative
        background $carouselThunmbIndicatorBgColor
        margin 0
        padding 15px 0
        height 91px
        -webkit-clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
        clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
        -webkit-clip-path url("#carousel-thumbs-ol-clip-shape-12")
        clip-path url("#carousel-thumbs-ol-clip-shape-12")
        html.safari &
          -webkit-clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
          clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
        &:after
          content ''
          position absolute
          right 32px
          top 15px
          bottom 15px
          display inline-block
          clear none
          width 20px
          background-color $mainColor
          transform skew(-45deg)
      li
        height 60px
        width 180px
        transform skew(-45deg)
        transform-origin center center
        border-radius 0
        overflow hidden
        display none
        .img-bg
          width 200%
          height 200%
          transform skew(45deg)
          background-position 50% 50%
          background-repeat no-repeat
          background-size cover
        &:nth-child(1)
          display inline-block
        &:nth-child(2)
          display inline-block
        &:nth-child(3)
          display inline-block

  .carousel-dir-container
    position absolute // move to right bottom
    z-index 202
    height auto
    left 0
    right 0
    bottom 50px
  .carousel-dir-controls
    // display none
    // height 100%
    text-align right
    .carousel-control
      display inline-block
      position static
      margin 0
      height 0
      width 50px
      height 50px
      line-height 50px
      background $carouselDirControlBgColor
      color $carouselDirControlColor
      &:hover, &:focus
        background-color $carouselDirControlHoverBgColor
        color $carouselDirControlHoverColor
      .glyphicon-chevron-left, .glyphicon-chevron-right
        position static
        margin 0
        height 0
        color $carouselDirControlColor
        text-shadow none

@media (min-width: 768px) and (max-width: 991px)
  .carousel-container
    .carousel-dir-container
      bottom 20px
      .carousel-control
        width 40px
        height 40px
        line-height 40px
        .glyphicon
          font-size 20px

@media screen and (max-width: 767px)
  .banner-loading .img-container
    height 0px
    padding-bottom 36.46%
  .carousel-container
      //padding-bottom 0 // 40px
      margin-top 130px
      #carousel-banner .carousel-inner .item
        height 0px
        padding-bottom 36.46%
      .carousel-indicators
        display block
        text-align right
        padding-right 40px
      .carousel-dir-controls
        display none
