.guide-container
  padding-left 0
  padding-right 0
  margin-top 30px

  .guide-img
    width 100%
    overflow hidden
    .row
      margin 0
    .img
      padding 0
      animation-duration 1s
      .img-holder
        display inline-block
        height 300px
        width: 100%
        background #eff0f1
      &:nth-child(1)
        padding-left 0
        text-align left
      &:nth-child(2)
        margin 0 auto
        text-align center
      &:nth-child(3)
        padding-right 0
        text-align right
      &>a
        display inline-block
        border none
        width 95%
        height 0
        padding-bottom ((420/380*100)+'%')
        background-position 50% 50%
        background-repeat no-repeat
        background-size cover
        &:hover, &:focus
          border-color $mainColor
        img
          display none
          // width 90%
          // height 300px
          // max-height 300px
          // border 1px solid #ddd
          // background #eff0f1

@media screen and (max-width: 767px)
  .guide-container
    margin-top 15px
    .guide-img
      .row
        width 150%
        // margin-left -25%
      .img
        // transition .4s ease-in-out
        // transform translateX(-43%)
        &:nth-child(1)
          text-align center
          margin-left -16.66667%
        &:nth-child(2)
          text-align center
        &:nth-child(3)
          text-align center
        &>a
          border-width 0
