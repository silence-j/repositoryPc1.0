.cd-top
  display inline-block
  position fixed
  z-index 899
  bottom 40px
  right 40px
  height 40px
  width 40px
  line-height 36px
  text-decoration none
  overflow visible
  white-space nowrap
  text-align center
  font-size 20px
  cursor pointer
  border 2px solid $mainColor
  background-color $mainColor
  color $white
  border-radius 5px
  box-shadow 0 2px 8px 0 rgba(252, 65, 88, 0.6)
  -webkit-transition opacity .3s 0s, visibility 0s .3s
  -moz-transition opacity .3s 0s, visibility 0s .3s
  transition opacity .3s 0s, visibility 0s .3s
  visibility hidden
  opacity 0
  &:hover
    text-decoration none
    background-color $backgroundColor
    border-color $backgroundColor
    .theme-icon
      color $white
  &.cd-is-visible,
  &.cd-fade-out
    -webkit-transition opacity .3s 0s, visibility 0s 0s
    -moz-transition opacity .3s 0s, visibility 0s 0s
    transition opacity .3s 0s, visibility 0s 0s
  &.cd-is-visible
    visibility visible
    opacity 1
  &.cd-fade-out
    opacity .5
  .theme-icon
    width 36px
    line-height 36px
    font-size 20px
    color $white
  p
    display none
    margin 0
    color $mainColor
    font-size 12px
    text-align center
    margin-left -12px

