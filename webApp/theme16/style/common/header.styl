@import "color.styl"
@import "homeEditor.styl"

.navbar
  min-height 40px
  margin-bottom 0
.header
  top 0
  background $headerBgColor
  .top
    background-color $headerTopBgColor
    height 30px
    line-height 30px
    overflow hidden

    // pc version social area
    .social-container
      display inline-block
      vertical-align middle
      a
        display inline-block
        margin-left 30px
        color $socialItemColor
        &:hover, &:focus, &:active
          color $socialItemHoverColor
          text-decoration none
        &:first-child
          margin-left 0

    // pc version user area
    .user-container
      background-color $userContainerBgColor
      vertical-align middle
      padding 0 10px
      &:hover
        background-color $userContainerHoverBgColor
      &:before
        content ""
        display inline-block
        vertical-align middle
        height 100%
      span
        display inline-block
        vertical-align middle
        color $userContainerColor
      a
        text-decoration none
        color $userContainerLinkColor
        margin-right 10px
        &:hover, &:active, &:focus
          text-decoration none
        &:last-child
          margin-right 0
        &.username
          padding-right 10px
          border-right 1px solid $userContainerSepLineColor
      .glyphicon-user
        color $userContainerIconColor
        margin-right 5px

  .bottom
    border-top 1px solid $headerBorderColor
    background #101010
    z-index 499
    .navbar
      position relative
      background $navbarBgColor
      border none
      border-radius 0

    .navbar-header
      background-color $navbarBgColor
      position relative

      // mobile version menu
      button
        padding: 11px 15px
        margin 5px 0 0 0
        font-weight bold
        border none
        background-color $mbTopSearchLabelBgColor
        color $mbTopSearchLabelColor
        .menu-close
          display none
        .menu-bar
          font-size 14px
          vertical-align bottom
          display inline-block
          margin-left 10px
          margin-right 5px
          width 30px
          background-color $mbTopSearchLabelBgColor
          color $mbTopSearchLabelColor
        .menu-text
          vertical-align text-bottom
          color $mbTopSearchLabelColor
      button:focus
        border none
        background none
      button:hover
        border none
        background none
      // mobile version search
      .search-input
        height 50px
        border-top 1px solid $mbTopSearchBorderColor
        border-bottom 1px solid $mbTopSearchBorderColor
        background $mbTopSearchInputBgColor
        input
          background $mbTopSearchInputBgColor
          color $mbTopSearchInputColor
          border none
          border-radius 0
          height 50px
          box-shadow none
          &:active, &:focus
            box-shadow none
        span
          border none
          background $mbTopSearchBtnBgColor
      .search-tip-list
        display none
        position absolute
        left 0
        right 0
        top 40px
        padding 5px 0 15px
        z-index 699
        background-color $pcTopSearchTipListBgColor
        color $pcTopSearchTipListColor
        margin 0
        li
          display block
          height 35px
          line-height 35px
          padding 0 10px
          background-color $pcTopSearchTipListBgColor
          color $pcTopSearchTipListColor
          overflow hidden
          text-overflow ellipsis
          &:hover
            background-color $pcTopSearchTipListItemHoverBgColor
            color $pcTopSearchTipListItemHoverColor

    // pc version logo
    .logo-img-loading
      display inline-block
      background $loadingBg
      height 52px
      width 120px
      margin-top 18px
    .logo-wrapper
      position absolute
      z-index 501
      left -30px
      top 0
      width auto
      height 88px
      line-height 88px
      vertical-align middle
      overflow hidden
      &:before
        content ''
        display inline-block
        vertical-align middle
        height 100%
      .logo-img
        display none
        height 52px
        width auto
        vertical-align middle

    // pc version search
    .top-search
      position absolute
      z-index 199
      right 15px
      top 0
      width auto
      height 88px
      line-height 88px
      .search-bar
        display inline-block
        vertical-align middle
        text-decoration none
        color $seachBarColor
        margin-right 10px
        &:hover, &:active, &:focus
          text-decoration none
      .hidden-search
        line-height normal
        width 200px
        margin-left 0
        background-color $pcTopSearchBgColor
        display inline-block
        animation-duration 0.2s
        vertical-align middle
        .input-group
          position relative
          width 100%
          .form-control
            background-color $pcTopSearchInputBgColor
            border 1px solid $pcTopSearchInputBgColor
            height 40px
            line-height 38px
            padding 0 12px
            border-radius 5px
            box-shadow none
            color $pcTopSearchInputColor
            &::placeholder
              color $pcTopSearchInputColor
            &:active, &:focus
              background-color $pcTopSearchInputFocusBgColor
              border 1px solid $pcTopSearchBorderColor
              color $pcTopSearchInputFocusColor
              box-shadow none
              outline none
          .btn
            background none
            border none
            height 40px
            padding 0 5px
            color $pcTopSearchBtnColor
            &:focus
              outline none
              color $pcTopSearchBtnHoverColor
            &.search-btn
              margin-left -30px
              z-index 9
            &.close-input
              padding 0 20px 0 10px
        .search-tip-list
          position absolute
          z-index 999
          top 40px
          left 0
          right 0
          margin 0
          padding 5px 0
          background-color $pcTopSearchTipListBgColor
          border 1px solid $pcTopSearchTipListBorderColor
          // box-shadow 0 0 6px 0 $pcTopSearchTipListShadowColor
          display none
          overflow hidden
          li
            display block
            height 35px
            line-height 35px
            padding 0 10px
            background-color $pcTopSearchTipListBgColor
            color $pcTopSearchTipListColor
            cursor pointer
            overflow hidden
            text-overflow ellipsis
            &:hover
              background-color $pcTopSearchTipListItemHoverBgColor
              color $pcTopSearchTipListItemHoverColor
            &.empty
              cursor default

    ul.navbar-nav
      position relative
      text-align center
      height 100px
      vertical-align middle
      & > li
        float none
        display inline-block
        height 66px
        margin-top 34px
        // padding 0 25px
        &:hover
          a
            background-color transparent
            color $mainColor
        & > a
          height 32px
          line-height 32px
          padding 0 25px
          background-color $navbarItemBgColor
          color $navbarItemColor
          font-size 16px
          .caret
            margin-left 2.5px
          &:hover, &:focus
            cursor pointer
            text-decoration none
            background-color transparent
            color $mainColor
            // border-bottom 3px solid $mainColor
      li:last-child
        margin-right 0
      li.active
        border-bottom none
        & > a
          background-color $navbarItemHoverBgColor
          color $navbarItemHoverColor
          // border-bottom 3px solid $mainColor
          &:hover, &:active, &:focus
            background-color $navbarItemHoverBgColor
            color $navbarItemHoverColor
      li.drop-menu, li.nav-drop-menu
        position relative
        .slide-down, .slide-up
          vertical-align middle
          display inline-block
          margin-top -3px
          margin-left 2px
          font-size 12px
        .slide-up
          display none
        .drop-hidden-menu
          position absolute
          z-index 99
          top 66px
          left 0
          width 220px
          height 0
          padding 0 // 5px 0 10px
          margin-top 0
          background $navbarSubBgColor
          opacity 0
          overflow hidden
          transition opacity 0.2s ease
          li
            display block
            max-height 40px
            text-align left
            a
              position relative
              display inline-block
              width 100%
              height 40px
              line-height 40px
              padding 0 25px // 0 10px
              background-color $navbarSubItemBgColor
              color $navbarSubItemColor
              font-size 14px
              text-overflow ellipsis
              overflow hidden
              white-space nowrap
              &:hover, &:active, &:focus
                background-color $navbarSubItemHoverBgColor
                color $navbarSubItemHoverColor
                text-decoration none
              i
                position absolute
                right 18px // 5px
                top 0
                font-size 13px
                float right
            .drop-hidden-menu-2-wrapper
              position absolute
              z-index 999
              width 220px
              height 0
              margin -45px 0 0 220px
              padding 0
              opacity 0
              overflow hidden
              background $navbarSub2BgColor
              transition opacity 0.2s ease
            .drop-hidden-menu-2
              background-color $navbarSub2BgColor
              padding 0 // 5px 0 10px
          li.drop-menu-2:hover
            & > a
              background $navbarItemHoverBgColor
              color $navbarItemHoverColor
            .drop-hidden-menu-2-wrapper
              height auto
              opacity 1
        &.drop-right
          .drop-hidden-menu
            display block
            left auto
            right 0
          &:hover
            .drop-hidden-menu
              top 0
              padding-top 66px
              background transparent
              & > li
                background $navbarSubBgColor
      li.drop-menu:hover, li.nav-drop-menu:hover
        .slide-down
          display none
        .slide-up
          display inline-block
        .drop-hidden-menu
          height auto
          opacity 1
          overflow visible
      li.line-li
        display none
        margin 0
        padding 0
        vertical-align middle
        .line
          display inline-block
          height 20px
          width 1px
          background $navbarItemLineColor
          vertical-align middle
      li.search-li, li.user-li
        margin-left 20px
        a
          padding 0 5px
          text-align center
      li.search-li
        margin-left 150px
        .close-input
          display none
          width 16px
          height 16px
          line-height 16px
          margin 8px 5px 0
          padding 0
          font-size 12px
          background-color $seachBarCloseBgColor
          color $seachBarCloseColor
          border-radius 8px
      .user-opration, .user-loged
        color $userContainerColor
        display none
        line-height 60px
        a
          color $userContainerLinkColor
        span
          margin 0 7px
        i
          margin-right 6px
        .username
          width: 40px
          display inline-block
          white-space nowrap
          overflow hidden
          text-overflow: ellipsis
          line-height 10px
          padding 0

  .foot-search
    display none
    padding 15px
    text-align right
    .hidden-search
      width 80%
      line-height normal
      margin-left 0
      padding-right 64px
      background-color $pcTopSearchBgColor
      display inline-block
      animation-duration 0.2s
      vertical-align middle
      .input-group
        position relative
        width 100%
        .form-control
          background-color $pcTopSearchInputBgColor
          border 1px solid $pcTopSearchBorderColor
          height 40px
          line-height 38px
          padding 0 12px
          border-radius 0
          box-shadow none
          color $pcTopSearchInputColor
          &::placeholder
            color $pcTopSearchInputColor
          &:active, &:focus
            background-color $pcTopSearchInputFocusBgColor
            border 1px solid $pcTopSearchBorderColor
            color $pcTopSearchInputFocusColor
            box-shadow none
            outline none
        .btn
          background none
          border none
          height 40px
          padding 0 5px
          color $pcTopSearchBtnColor
          &:focus
            outline none
            color $pcTopSearchBtnHoverColor
          &.search-btn
            position absolute
            z-index 9
            top 0
            right 15px
          &.close-input
            padding 0 20px 0 10px
      .search-tip-list
        display none
        position absolute
        z-index 999
        top 40px
        left 0
        right 6px
        margin 0
        padding 5px 0
        background-color $pcTopSearchTipListBgColor
        border 1px solid $pcTopSearchTipListBorderColor
        // box-shadow 0 0 6px 0 $pcTopSearchTipListShadowColor
        overflow hidden
        li
          display block
          height 35px
          line-height 35px
          padding 0 10px
          background-color $pcTopSearchTipListBgColor
          color $pcTopSearchTipListColor
          cursor pointer
          text-align left
          &:hover
            background-color $pcTopSearchTipListItemHoverBgColor
            color $pcTopSearchTipListItemHoverColor
          &.empty
            cursor default

@media screen and (max-width: 1200px)
  .header
    .bottom
      ul.navbar-nav
        li.search-li
          margin-left 0

@media (min-width: 768px) and (max-width: 999px)
  .header
    .bottom
      .logo-wrapper
        left 10px
      ul.navbar-nav
        & > li
          & > a
            padding 0 10px
        li.user-li
          margin-left 5px
      .navbar-collapse
        padding 0
    .foot-search
      .hidden-search
        padding-right 34px
