  // &:before // square prefix style
  //   content ''
  //   display inline-block
  //   background-color $mainColor
  //   // width 15px
  //   // height 15px
  //   width 3px
  //   height 30px
  //   margin-right 10px
  // &:before, &:after // close style
  //   content ''
