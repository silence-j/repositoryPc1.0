    //     visibility hidden
    //     opacity 0
    //   .p-title
    //     visibility hidden
    //     opacity 0
    //   .learn-more-cntr
    //     display block
    //     background-color $itemLearnMoreCntrBgColor
    //     margin 0 -10px
    //     padding 0 10px 10px 10px
    .learn-more
      // display none
      // top 40%
      top 40%
      width 40px
      left 50%
      margin-left -20px
      background-color $itemLearnMoreBgColor
      border-color $itemLearnMoreBorderColor
      color $itemLearnMoreColor
      display none
      border-radius 20px
      &:hover, &:focus, &:active
        background-color $itemLearnMoreHoverBgColor
        border-color $itemLearnMoreHoverBorderColor
        color $itemLearnMoreHoverColor
      &:before, &:after
        position absolute
        content ''
        display block
        width 32px
        height 2px
        background-color $mainColor
      &:before
        top -7px
        left -16px
      &:after
        bottom -7px
        right -16px
  .item-container
    // border 1px solid $itemBorderColor
    padding 0 // 10px
    transition 0.2s all ease
    &.tit
      background $itemTitleBgColor
      color $itemTitleColor
      border-color $itemTitleColor
      padding 10px // 0 10px
  .img-container
    padding-bottom 100%
    position relative
    overflow hidden
    img
      position absolute
      top 0
      transition all 0.6s
      width 100%
    img:hover
      // transform scale(1.2)
      transform scale(1)
  .p-title
    height 40px
    line-height 20px
    padding 0 // 10px 0
    overflow hidden
    text-overflow ellipsis
    display -webkit-box
    -webkit-box-orient vertical
    -webkit-line-clamp 2
    font-size 14px
    color $itemTitleColor
  &:hover
    .p-item
      // box-shadow 1px 1px 10px $itemBoxShadowColor
      border-color $itemHoverBorderColor
      // padding-bottom 30px // hover roll up style
      // .item-container
      //   margin-top -15px  // hover roll up style
      // .img-container // image shadow
      //   box-shadow 1px 1px 10px $itemBoxShadowColor
      .hover-container
        display block
      .item-container
        text-decoration none
    .item-container
      &.tit
        background $itemTitleHoverBgColor // url(/assets/$theme/images/btn_bg.png) top left repeat-y
        color $itemTitleHoverColor
        height 60px
    .p-title
      // padding 0 25px
      // text-align center
      // height 42px
      // line-height 42px
      color $itemTitleHoverColor

