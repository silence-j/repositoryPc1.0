.guide-container
  background-color $advertSectionBgColor // add background color
  margin-top 0 // 30px
  padding 80px 0
  max-width 100%
  overflow hidden
  .guide-img
    width 100%
    position relative
    .img
      position absolute
      top 0
      animation-duration 1s
      overflow hidden
      padding 0
      .img-holder
        display inline-block
        // height 300px
        height 0
        padding-bottom 100%
        width 100%
        background $loadingBg
      & > a
        display block
        width 100%
        height 0
        padding-bottom 100%
        overflow hidden
        background-position 50% 50%
        background-repeat no-repeat
        background-size cover
        &:hover, &:focus
          opacity 0.8
          box-shadow 1px 1px 10px $advertItemHoverShadowColor
        img
          display none
          width 100%
          height auto
      &.square-img1
        width 30%
        left 0
        & > a
          padding-bottom 73.2%
      &.square-img2
        width 30%
        left 35%
        & > a
          padding-bottom 73.2%
      &.square-img3
        float right
        position static
        width 30%
        & > a
          padding-bottom 73.2%
      &.img1
        left 0
        width 45.45456%
        & > a
          padding-bottom 73.2%
        -webkit-clip-path polygon(0 0, 100% 0, 26.2% 100%, 0% 100%)
        clip-path polygon(0 0, 100% 0, 26.2% 100%, 0% 100%)
        -webkit-clip-path url("#home-advert1-clip-path")
        clip-path url("#home-advert1-clip-path")
        html.safari &
          -webkit-clip-path polygon(0 0, 100% 0, 26.2% 100%, 0% 100%)
          clip-path polygon(0 0, 100% 0, 26.2% 100%, 0% 100%)
        & > a
          padding-bottom 73.2%
      &.img2
        left 13.27272%
        width 73.27272%
        -webkit-clip-path polygon(45.25% 0, 100% 0, 54.75% 100%, 0% 100%)
        clip-path polygon(45.25% 0, 100% 0, 54.75% 100%, 0% 100%)
        -webkit-clip-path url("#home-advert2-clip-path")
        clip-path url("#home-advert2-clip-path")
        html.safari &
          -webkit-clip-path polygon(45.25% 0, 100% 0, 54.75% 100%, 0% 100%)
          clip-path polygon(45.25% 0, 100% 0, 54.75% 100%, 0% 100%)
        & > a
          padding-bottom 45.45%
      &.img3
        position static
        float right
        width 45.45456%
        -webkit-clip-path polygon(71.8% 0, 100% 0, 100% 100%, 0% 100%)
        clip-path polygon(71.8% 0, 100% 0, 100% 100%, 0% 100%)
        -webkit-clip-path url("#home-advert3-clip-path")
        clip-path url("#home-advert3-clip-path")
        html.safari &
          -webkit-clip-path polygon(71.8% 0, 100% 0, 100% 100%, 0% 100%)
          clip-path polygon(71.8% 0, 100% 0, 100% 100%, 0% 100%)
        & > a
          padding-bottom 71.5%

@media screen and (max-width: 767px)
  .guide-container
    margin-top 0 // 15px
    padding 0
    .guide-img
      .row
        width 150%
        // margin-left -25%
      .img
        position static
        // transition .4s ease-in-out
        // transform translateX(-43%)
        &.square-img1
          position static
          text-align center
          -webkit-clip-path none
          clip-path none
          width 33%
          margin 0 5px
        &.square-img2
          position static
          text-align center
          -webkit-clip-path none
          clip-path none
          width 33%
          margin 0 5px
        &.square-img3
          float left
          text-align center
          -webkit-clip-path none
          clip-path none
          width 33%
          margin 0 5px
        &.img1
          position static
