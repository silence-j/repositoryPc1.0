@import "color.styl"
@import "homeEditor.styl"

.navbar
  min-height 40px
  margin-bottom 0
.header
  background $headerBgColor
  .top
    position relative
    .logo-img-loading
      height 73.6px
      width 200px
      background $loadingBg
      margin-top 12px
      display inline-block
    .logo-wrapper
      position relative
      display block
      height 134px
      line-height 134px
      text-align center
      z-index 3
      .header-left, .header-right
        position absolute
        left 0
        top 0
        height 100%
        line-height normal
        background-color $headerBgColor
        color $black
        vertical-align middle
        text-align left
        word-break break-all
        &:before
          content ""
          display inline-block
          vertical-align middle
          height 100%
        span
          display inline-block
          vertical-align middle
        a
          display inline-block
          vertical-align middle
          text-decoration none
          color $blackO
          margin-right 5px
          &:hover, &:active, &:focus
            text-decoration none
          &.username
            padding-right 10px
            border-right 1px solid $blackO
        .glyphicon-user
          margin-right 5px
          .user-loged &
            color $mainColor
      .user-opration
        a:last-child
          margin-left 5px
          margin-right 0
      .user-loged
        .glyphicon-user
          color $mainColor

      // pc version search
      .top-search
        position relative
        .search-bar
          padding-right 50px
        .hidden-search
          width 300px
          margin-left 0
          background-color $pcTopSearchBgColor
          display none
          animation-duration 0.2s
          vertical-align middle
          .input-group
            position relative
            .form-control
              background-color $pcTopSearchInputBgColor
              border 1px solid $pcTopSearchInputBgColor
              color $pcTopSearchInputColor
              border-radius 0
              padding 0 12px
              height 40px
              line-height 38px
              box-shadow none
              color $pcTopSearchInputColor
              &::placeholder
                color $pcTopSearchInputColor
              &:active, &:focus
                background-color $pcTopSearchInputFocusBgColor
                border 1px solid $pcTopSearchBorderColor
                color $pcTopSearchInputFocusColor
                outline none
                box-shadow none
            .btn
              background none
              border none
              height 40px
              color $pcTopSearchBtnColor
              padding 0 5px
              &:focus
                outline none
                color $pcTopSearchBtnHoverColor
              &.search-btn
                margin-left -30px
                z-index 9
              &.close-input
                padding 0 20px 0 10px
          .search-tip-list
            position absolute
            z-index 999
            top 40px
            left 0
            right 45px
            margin 0
            padding 5px 0
            background-color $pcTopSearchTipListBgColor
            border 1px solid $pcTopSearchTipListBorderColor
            display none
            max-height 400px
            overflow auto
            li
              height 35px
              line-height 35px
              padding 0 10px
              cursor pointer
              overflow hidden
              text-overflow ellipsis
              &:hover
                background-color $pcTopSearchTipListItenHoverBgColor
              &.empty
                cursor default

      .header-right
        left auto
        right 0
        .social-container
          display inline-block
          vertical-align middle
          a
            display inline-block
            margin-left 30px
            color #E0E0E0
            &:hover, &:focus, &:active
              color $blackO
    .logo-img
      display none
      height 73.6px
      width auto

  .bottom
    border-top 1px solid $grayOOO
    background #fff
    z-index 499
    .navbar
      background $navbarBgColor
      border none
      border-radius 6px
      position relative
    .navbar-header
      background-color $navbarBgColor
      position relative

      // mobile version search
      .search-input
        height 50px
        border-top 1px solid $mbTopSearchBorderColor
        border-bottom 1px solid $mbTopSearchBorderColor
        background $mbTopSearchInputBgColor
        input
          background $mbTopSearchInputBgColor
          color $mbTopSearchInputColor
          border none
          border-radius 0
          height 50px
          box-shadow none
          &:active, &:focus
            box-shadow none
        span
          border none
          background $whiteOO
      button
        padding: 11px 15px
        margin 5px 0 0 0
        font-weight bold
        border none
        background-color $mbTopSearchBtnBgColor
        color $mbTopSearchBtnColor
        .menu-close
          display none
        .menu-bar
          font-size 14px
          vertical-align bottom
          display inline-block
          margin-left 10px
          margin-right 5px
          width 30px
          background-color $mbTopSearchLabelBgColor
          color $mbTopSearchLabelColor
        .menu-text
          vertical-align text-bottom
          color $mbTopSearchBtnColor
      button:focus
        border none
        background none
      button:hover
        border none
        background none
      .search-tip-list
        display none
        position absolute
        left 0
        right 0
        top 40px
        padding 5px 0 15px
        z-index 699
        background $white
        margin 0
        max-height 400px
        overflow auto
        li
          display block
          height 35px
          line-height 35px
          padding 0 10px
          overflow hidden
          text-overflow ellipsis
          &:hover
            background-color #F7F7F7

    .navbar-nav
      text-align center
    ul > li
      line-height 85px
      height 85px
      display inline-block
      float none
      & > a
        background-color $navbarItemBgColor
        color $navbarItemColor
        font-size 16px
        line-height 85px
        height 85px
        padding 0 25px
        .caret
          margin-left 2.5px
        &:hover, &:focus
          cursor pointer
          text-decoration none
          background-color $navbarItemHoverBgColor
          color $navbarItemHoverColor
    ul.navbar-nav
      position relative
      li.drop-menu, li.nav-drop-menu
        position relative
        .slide-down, .slide-up
          vertical-align middle
          display inline-block
          margin-top -3px
          margin-left 2px
          font-size 12px
        .slide-up
          display none
        .drop-hidden-menu
          border-top 5px solid $mainColor
          position absolute
          z-index 99
          top 85px
          left 20px
          width 210px
          padding 5px 0 25px
          background $navbarSubBgColor
          height 0
          opacity 0
          overflow hidden
          margin-top 0
          transition opacity 0.2s ease
          li
            border-bottom 1px solid transparent
            height 40px
            line-height 40px
            display block
            text-align left
            a
              height 40px
              line-height normal
              font-weight normal
              background-color $navbarSubItemBgColor
              color $navbarSubItemColor
              width 100%
              display inline-block
              padding 10px 20px 10px 10px
              text-overflow ellipsis
              overflow hidden
              white-space nowrap
              position relative
              i
                position absolute
                right 5px
                top 12.5px
                font-size 13px
                float right
            .drop-hidden-menu-2-wrapper
              border-top 5px solid $mainColor
              position absolute
              z-index 999
              width 0
              height 0
              opacity 0
              display none
              overflow hidden
              background $navbarSub2BgColor
              transition opacity 0.2s ease
              width 210px
              margin -60px 0 0 212px
              padding 0
            .drop-hidden-menu-2
              background-color $navbarSub2BgColor
              padding 5px 0 25px
              // box-shadow 1px 1px 5px $grayOOO
            a:hover
              color $mainColor
              text-decoration none
          li.drop-menu-2:hover
            & > a
              background $navbarSubBgColor
              color $mainColor
            .drop-hidden-menu-2-wrapper
              height auto
              opacity 1
              display block
            .drop-hidden-menu-2
              padding 5px 0 25px
      li.drop-menu:hover, li.nav-drop-menu:hover
        .slide-down
          display none
        .slide-up
          display inline-block
        .drop-hidden-menu
          height auto
          opacity 1
          overflow visible
      li:last-child
        margin-right 0
      li.active
        border-bottom none
        a
          background-color $navbarItemHoverBgColor
          color $navbarItemHoverColor
        a:hover, a:focus
          background-color $navbarItemHoverBgColor
          color $navbarItemHoverColor
      .line-li
        height 50px
        margin 0
        padding-top 0
        .line
          display inline-block
          height 20px
          width 1px
          background $navbarItemLineColor
      .search-li, .user-li
        a
          padding 0 20px
      .user-opration, .user-loged
        color $blackO
        display none
        line-height 60px
        a
          color $blackO
        span
          margin 0 7px
        i
          margin-right 6px
        .username
          width: 40px
          display inline-block
          white-space nowrap
          overflow hidden
          text-overflow: ellipsis
          line-height 10px
          padding 0

@media screen and (max-width: 1200px)
  .header
    .bottom
      ul > li
        a
          padding 0 20px
    .hidden-search
      .search-tip-list
        width 781px

@media screen and (max-width: 999px)
  .header
    .top
      .logo-wrapper
        .top-search
          .search-bar
            padding-right 10px
        .header-left
          a.username
            width 100px
            padding-right 5px
            overflow hidden
            text-overflow ellipsis
            height 20px
            line-height 20px
    .bottom
      ul > li
        a
          padding 0 20px
      ul.navbar-nav
        li.drop-menu
          &:hover
            .drop-hidden-menu
              left 10px
    .hidden-search
      .search-tip-list
        width 560px
/*old 767px*/
@media screen and (max-width: 999px)
  .header
    .top
      min-height 90px
      .logo-wrapper
        line-height 90px
        height 90px
      .logo-img
        height 45px
    .bottom
      .navbar-collapse
        background-color $headerBgColor
        padding 0
      ul.navbar-nav
        background-color $headerBgColor
        margin 0
        padding 0
        & > li
          border-bottom 1px solid $whiteO
          padding 0 15px
          height auto
          line-height 74px
          display block
          text-align left
          & > a
            background-color transparent
            color $blackTrue
            text-decoration none
            height 74px
            line-height 74px
            padding 0
            text-align left
            &:hover, &:active, &:focus
              background-color transparent
              color $blackTrue
            .caret
              position absolute
              right 20px
              top 50%
              margin-top -5px
            &:before
              content ''
              display inline-block
              width 15px
              height 15px
              background-color $mainColor
              margin-right 10px
        li.drop-menu, li.drop-menu:hover
          .drop-hidden-menu
            background $white
            opacity 1
            height auto
            position relative
            border-top none
            width 100%
            box-shadow none
            top 0
            left auto
            li
              border none
            li.drop-menu-2, li.drop-menu-2:hover
              background $white
              // border-top 1px solid $grayOO
              border none
              height auto
              a
                background-color transparent
                color $blackTrue
                padding 0 25px
                border-radius 0 !important
                font-size 16px
                line-height 40px
              .drop-hidden-menu-2
                position relative
                background $white
                width 100%
                height auto
                opacity 1
                margin-left 0
                margin-top 0
                padding 0
                border-top none
                box-shadow none
                li
                  height 40px
                  margin-bottom 15px
                  padding-left 10px
                  padding-right 10px
                  float left
                a
                  line-height 36px
                  background $loadingBg
                  padding 2px 10px
                  text-align center
                  margin-bottom 7px
                  border-radius 0 !important
                  &:hover, &:focus
                    background-color $mainColor
                    color $white
        li.active
          border-bottom 1px solid $whiteO
          a, a:hover, a:active, a:focus
            font-weight normal
            background-color transparent
            color $blackTrue
        li.user-li
          background $loadingBg
          width 100%
          text-align left
          .user-opration, .user-loged
            margin-left 10px
            line-height 40px
            a
              background-color transparent
              padding 0
              font-weight normal
              color $blackO
              &.username
                // width 80px
                width auto
                display inline
                line-height normal
        .social-container
          color $grayO
          // margin-top 40px
          margin-top 0
          a
            display inline-block
            text-align center
            color $grayO
            &:hover, &:active, &:focus
              text-decoration none
              color $mainColor
          i
            font-size 18px
