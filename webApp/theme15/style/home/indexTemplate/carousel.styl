.carousel-container
  // padding-bottom 90px
  .banner-loading
    width 100%
    background $loadingBg
    .img-container
      position relative
      padding-bottom 28.64583%
      background url('/images/banner-loading.png') no-repeat
      background-size 50% 100%
      background-position center
  #carousel-banner
    display none
    .carousel-inner
      //padding-bottom 28.64583%
      position relative
      .item
        height 0px
        padding-bottom 28.64%
        a
         display inline-block
         img
           position absolute
           top 0
           width 100%
           height 100%
  .carousel-indicators
    margin 0
    &.dots
      bottom 10px
      left auto
      right 0
      width 100%
      text-align center
      li
        text-indent 0
        border-radius 0
        border none
        width 40px
        height 3px
        margin 0 5px
        border-radius 0
        border none
        background-color $white
        color $black
        &.active
          background-color $mainColor
          color #F1EEEA
    &.thumbs
      display none
      background -webkit-linear-gradient(to right, $mainColor, $mainColor 50%, #F7F7F7 50%, #F7F7F7)
      background linear-gradient(to right, $mainColor, $mainColor 50%, #F7F7F7 50%, #F7F7F7)
      height 90px
      bottom -90px
      ol
        position relative
        background #F7F7F7
        margin 0
        padding 15px 0
        height 91px
        -webkit-clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
        clip-path polygon(12% 0, 100% 0, 100% 100%, 0% 100%)
        -webkit-clip-path url("#carousel-thumbs-ol-clip-shape-12")
        clip-path url("#carousel-thumbs-ol-clip-shape-12")
        &:after
          content ''
          position absolute
          right 32px
          top 15px
          bottom 15px
          display inline-block
          clear none
          width 20px
          background-color $mainColor
          transform skew(-45deg)
      li
        height 60px
        width 180px
        transform skew(-45deg)
        transform-origin center center
        border-radius 0
        overflow hidden
        display none
        .img-bg
          width 200%
          height 200%
          transform skew(45deg)
          background-position 50% 50%
          background-repeat no-repeat
          background-size cover
        &:nth-child(1)
          display inline-block
        &:nth-child(2)
          display inline-block
        &:nth-child(3)
          display inline-block

  .carousel-dir-controls
    // display none
    height 100%
    .carousel-control
      background none
      .glyphicon-chevron-left, .glyphicon-chevron-right
        background rgba(255, 255, 255, 0.45)
        height 50px
        line-height 50px
        width 30px
        padding 0
        margin -25px 0 0 0
        text-align center
        &:hover, &:focus
          background $mainColor
      .glyphicon-chevron-left
        left 0
        right auto
      .glyphicon-chevron-right
        left auto
        right 0

@media screen and (max-width: 767px)
  .banner-loading .img-container
    height 0px
    padding-bottom 28.64%
  .carousel-container
      //padding-bottom 40px
      #carousel-banner .carousel-inner .item
        height 0px
        padding-bottom 28.64%
        item img
      .carousel-indicators
        display block
        text-align right
        padding-right 40px
      .carousel-dir-controls
        display none
