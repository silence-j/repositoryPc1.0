.footer-container
  margin-top 80px
  background $footerBlack
  .support,.quick-links,.follow-us
    margin-top 40px
    .title
      color $white
      font-size 16px
    .context
      color $gray
      &>span
        line-height 35px
      .sup-i
        color $mainColor
        margin-right 10px
      i
        margin-right 15px
      a,a:active
        color $gray
        text-decoration none
      a:hover
        color $white
      &.socail
        .glyphicon
          color $socialForgoundColor
          height 25px
          width 25px
          border-radius 12.5px
          padding 5px
          text-align center
          &.glyphicon-facebook
            background-color $socialFacebookBgColor
          &.glyphicon-linkedIn
            background-color $socialLinkedInBgColor
          &.glyphicon-twitter
            background-color $socialTwitterBgColor
  .footer-copyright
    margin-top 50px
    background #131313
  .discribe
    text-align center
    font-size 12px
    color $gray
    line-height 50px

@media screen and (max-width: 767px)
  .footer-container
    .support,.quick-links,.follow-us
      margin-top 20px
    .footer-copyright
      margin-top 20px
